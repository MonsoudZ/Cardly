<div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition group relative" id="<%= dom_id(listing) %>">
  <!-- Favorite Button -->
  <% if user_signed_in? && listing.user != current_user %>
    <div class="absolute top-3 right-3 z-10">
      <% if current_user.favorited?(listing) %>
        <%= button_to listing_favorite_path(listing), method: :delete, class: "p-1.5 bg-white/90 rounded-full shadow-sm hover:bg-white text-rose-500 hover:text-rose-600 transition", data: { turbo_frame: dom_id(listing) }, title: "Remove from watchlist" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
        <% end %>
      <% else %>
        <%= button_to listing_favorite_path(listing), method: :post, class: "p-1.5 bg-white/90 rounded-full shadow-sm hover:bg-white text-gray-400 hover:text-rose-500 transition", data: { turbo_frame: dom_id(listing) }, title: "Add to watchlist" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <%= link_to listing_path(listing), class: "block" do %>
    <div class="p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-3">
          <img src="<%= listing.brand_display_logo %>" alt="<%= listing.brand_name %>" class="w-12 h-8 object-contain">
          <div>
            <h3 class="font-medium text-gray-900 group-hover:text-rose-600"><%= listing.brand_name %></h3>
            <p class="text-sm text-gray-500">by <%= listing.user.display_name %></p>
          </div>
        </div>
        <% if listing.sale? %>
          <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">For Sale</span>
        <% else %>
          <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded">For Trade</span>
        <% end %>
      </div>

      <div class="flex justify-between items-end">
        <div>
          <p class="text-sm text-gray-500">Card Value</p>
          <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(listing.balance) %></p>
        </div>
        <% if listing.sale? %>
          <div class="text-right">
            <p class="text-sm text-gray-500">Asking Price</p>
            <p class="text-lg font-bold text-rose-600"><%= number_to_currency(listing.asking_price) %></p>
            <% if listing.discount_percentage.present? && listing.discount_percentage > 0 %>
              <p class="text-xs text-green-600 font-medium">Save <%= listing.discount_percentage %>%</p>
            <% end %>
          </div>
        <% else %>
          <div class="text-right">
            <p class="text-sm text-gray-500">Looking for</p>
            <p class="text-sm text-gray-700"><%= truncate(listing.trade_preferences, length: 30) %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="px-4 py-3 bg-gray-50 border-t border-gray-100">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-500">Listed <%= time_ago_in_words(listing.created_at) %> ago</span>
        <span class="text-rose-600 font-medium group-hover:text-rose-500">View Details</span>
      </div>
    </div>
  <% end %>
</div>
