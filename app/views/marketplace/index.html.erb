<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Marketplace</h1>
    <p class="mt-2 text-gray-600">Buy and trade gift cards with other users.</p>
  </div>

  <!-- Marketplace Tabs -->
  <div class="border-b border-gray-200 mb-8">
    <nav class="-mb-px flex space-x-8">
      <%= link_to marketplace_path, class: "pb-4 px-1 border-b-2 font-medium text-sm #{request.path == marketplace_path ? 'border-rose-500 text-rose-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        All Listings
        <span class="ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600"><%= @listings.count %></span>
      <% end %>
      <%= link_to marketplace_sales_path, class: "pb-4 px-1 border-b-2 font-medium text-sm #{request.path == marketplace_sales_path ? 'border-rose-500 text-rose-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        For Sale
      <% end %>
      <%= link_to marketplace_trades_path, class: "pb-4 px-1 border-b-2 font-medium text-sm #{request.path == marketplace_trades_path ? 'border-rose-500 text-rose-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        For Trade
      <% end %>
    </nav>
  </div>

  <% if @listings.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @listings.each do |listing| %>
        <%= render "marketplace/listing_card", listing: listing %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-gray-50 rounded-xl">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No listings yet</h3>
      <p class="mt-1 text-sm text-gray-500">Check back later for gift cards available for sale or trade.</p>
      <% if user_signed_in? %>
        <div class="mt-6">
          <%= link_to wallet_path, class: "inline-flex items-center px-4 py-2 bg-rose-600 text-white rounded-lg hover:bg-rose-500" do %>
            List Your Cards
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
