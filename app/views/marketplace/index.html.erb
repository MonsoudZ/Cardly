<div class="page-container">
  <div class="section-header">
    <div>
      <h1 class="section-title">Marketplace</h1>
      <p class="section-subtitle">Buy and trade gift cards with other users</p>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="card p-4 mb-6">
    <%= form_with url: request.path, method: :get, class: "space-y-4" do |f| %>
      <!-- Search Bar -->
      <div class="flex gap-4">
        <div class="flex-1 relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <%= render 'shared/components/icon', name: 'search', size: :md, color: 'text-neutral-400' %>
          </div>
          <%= text_field_tag :q, params[:q], placeholder: "Search by brand name...", class: "form-input pl-10" %>
        </div>
        <button type="submit" class="btn-primary btn-md">
          Search
        </button>
        <% if params[:q].present? || params[:brand_id].present? || params[:min_discount].present? || params[:max_price].present? %>
          <%= link_to request.path, class: "btn-ghost btn-md" do %>
            Clear
          <% end %>
        <% end %>
      </div>

      <!-- Filter Row -->
      <div class="flex flex-wrap gap-4 items-end">
        <!-- Brand Filter -->
        <div class="w-48">
          <label class="form-label">Brand</label>
          <%= select_tag :brand_id, options_from_collection_for_select(@brands, :id, :name, params[:brand_id]), include_blank: "All Brands", class: "form-input", onchange: "this.form.submit()" %>
        </div>

        <% if request.path == marketplace_sales_path || request.path == marketplace_path %>
          <!-- Min Discount -->
          <div class="w-36">
            <label class="form-label">Min Discount</label>
            <%= select_tag :min_discount, options_for_select([["Any", ""], ["5%+", 5], ["10%+", 10], ["15%+", 15], ["20%+", 20]], params[:min_discount]), class: "form-input", onchange: "this.form.submit()" %>
          </div>

          <!-- Max Price -->
          <div class="w-36">
            <label class="form-label">Max Price</label>
            <%= select_tag :max_price, options_for_select([["Any", ""], ["$25", 25], ["$50", 50], ["$100", 100], ["$200", 200]], params[:max_price]), class: "form-input", onchange: "this.form.submit()" %>
          </div>
        <% end %>

        <!-- Sort -->
        <div class="w-40">
          <label class="form-label">Sort By</label>
          <%= select_tag :sort, options_for_select([["Newest", "created_at"], ["Price: Low", "asking_price"], ["Discount: High", "discount_percent"]], params[:sort]), class: "form-input", onchange: "this.form.submit()" %>
          <%= hidden_field_tag :direction, params[:sort] == "discount_percent" ? "desc" : (params[:sort] == "asking_price" ? "asc" : "desc") %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Active Filters -->
  <% if params[:q].present? || params[:brand_id].present? || params[:min_discount].present? || params[:max_price].present? %>
    <div class="flex flex-wrap gap-2 mb-4 items-center">
      <span class="text-sm text-neutral-500">Active filters:</span>
      <% if params[:q].present? %>
        <%= link_to url_for(request.params.except(:q)), class: "badge badge-sm badge-primary flex items-center gap-1 hover:opacity-80" do %>
          Search: <%= params[:q] %>
          <%= render 'shared/components/icon', name: 'x', size: :xs %>
        <% end %>
      <% end %>
      <% if params[:brand_id].present? %>
        <% brand = @brands.find { |b| b.id == params[:brand_id].to_i } %>
        <%= link_to url_for(request.params.except(:brand_id)), class: "badge badge-sm badge-primary flex items-center gap-1 hover:opacity-80" do %>
          Brand: <%= brand&.name %>
          <%= render 'shared/components/icon', name: 'x', size: :xs %>
        <% end %>
      <% end %>
      <% if params[:min_discount].present? %>
        <%= link_to url_for(request.params.except(:min_discount)), class: "badge badge-sm badge-primary flex items-center gap-1 hover:opacity-80" do %>
          Min <%= params[:min_discount] %>% off
          <%= render 'shared/components/icon', name: 'x', size: :xs %>
        <% end %>
      <% end %>
      <% if params[:max_price].present? %>
        <%= link_to url_for(request.params.except(:max_price)), class: "badge badge-sm badge-primary flex items-center gap-1 hover:opacity-80" do %>
          Under $<%= params[:max_price] %>
          <%= render 'shared/components/icon', name: 'x', size: :xs %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- Marketplace Tabs -->
  <div class="border-b border-neutral-200 mb-8">
    <nav class="-mb-px flex space-x-8" data-controller="tabs">
      <%= link_to marketplace_path(request.params.except(:controller, :action)), class: "tab #{request.path == marketplace_path ? 'tab-active' : 'tab-inactive'}" do %>
        All Listings
        <%= render 'shared/components/badge', text: @listings.count, variant: :neutral, size: :sm, class: 'ml-2' %>
      <% end %>
      <%= link_to marketplace_sales_path(request.params.except(:controller, :action)), class: "tab #{request.path == marketplace_sales_path ? 'tab-active' : 'tab-inactive'}" do %>
        For Sale
      <% end %>
      <%= link_to marketplace_trades_path(request.params.except(:controller, :action)), class: "tab #{request.path == marketplace_trades_path ? 'tab-active' : 'tab-inactive'}" do %>
        For Trade
      <% end %>
    </nav>
  </div>

  <% if @listings.any? %>
    <div class="content-grid-3">
      <% @listings.each do |listing| %>
        <%= render "marketplace/listing_card", listing: listing %>
      <% end %>
    </div>
  <% else %>
    <% if params[:q].present? || params[:brand_id].present? || params[:min_discount].present? || params[:max_price].present? %>
      <%= render 'shared/components/empty_state',
          icon: 'search',
          title: 'No listings match your filters',
          description: 'Try adjusting your search or filters to find more results.',
          action_text: 'Clear Filters',
          action_path: request.path %>
    <% else %>
      <%= render 'shared/components/empty_state',
          icon: 'shopping-cart',
          title: 'No listings yet',
          description: 'Check back later for gift cards available for sale or trade.',
          action_text: user_signed_in? ? 'List Your Cards' : nil,
          action_path: user_signed_in? ? wallet_path : nil %>
    <% end %>
  <% end %>
</div>
