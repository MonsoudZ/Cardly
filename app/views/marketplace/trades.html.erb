<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Gift Cards For Trade</h1>
    <p class="mt-2 text-gray-600">Trade your gift cards with other users.</p>
  </div>

  <!-- Marketplace Tabs -->
  <div class="border-b border-gray-200 mb-8">
    <nav class="-mb-px flex space-x-8">
      <%= link_to marketplace_path, class: "pb-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" do %>
        All Listings
      <% end %>
      <%= link_to marketplace_sales_path, class: "pb-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" do %>
        For Sale
      <% end %>
      <%= link_to marketplace_trades_path, class: "pb-4 px-1 border-b-2 font-medium text-sm border-rose-500 text-rose-600" do %>
        For Trade
        <span class="ml-2 py-0.5 px-2.5 rounded-full text-xs font-medium bg-rose-100 text-rose-600"><%= @listings.count %></span>
      <% end %>
    </nav>
  </div>

  <% if @listings.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @listings.each do |listing| %>
        <%= render "marketplace/listing_card", listing: listing %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-gray-50 rounded-xl">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No cards for trade</h3>
      <p class="mt-1 text-sm text-gray-500">Check back later for gift cards available for trading.</p>
    </div>
  <% end %>
</div>
