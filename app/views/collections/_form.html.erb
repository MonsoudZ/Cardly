<%= form_with model: collection, class: "space-y-6" do |form| %>
  <% if collection.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(collection.errors.count, "error") %> prohibited this collection from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% collection.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "My Pokemon Collection" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_area :description, rows: 3, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "A description of your collection..." %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :public, class: "h-4 w-4 rounded border-gray-300 text-rose-600 focus:ring-rose-600" %>
    <%= form.label :public, class: "ml-3 block text-sm leading-6 text-gray-900" do %>
      Make this collection public
      <span class="text-gray-500 font-normal">- Others can view your collection</span>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", collections_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= form.submit class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600 cursor-pointer" %>
  </div>
<% end %>
