<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">My Collections</h1>
      <p class="mt-2 text-sm text-gray-700">Manage your card collections</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to "New Collection", new_collection_path, class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500" %>
    </div>
  </div>

  <% if @collections.any? %>
    <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @collections.each do |collection| %>
        <div class="overflow-hidden rounded-lg bg-white shadow">
          <div class="p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900"><%= collection.name %></h3>
              <% if collection.public? %>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">Public</span>
              <% else %>
                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">Private</span>
              <% end %>
            </div>
            <p class="mt-2 text-sm text-gray-600"><%= truncate(collection.description, length: 100) %></p>
            <div class="mt-4 flex items-center justify-between text-sm text-gray-500">
              <span><%= collection.total_cards %> cards</span>
              <span><%= number_to_currency(collection.total_value) %></span>
            </div>
            <div class="mt-4 flex space-x-3">
              <%= link_to "View", collection_path(collection), class: "flex-1 text-center rounded-md bg-rose-50 px-3 py-2 text-sm font-semibold text-rose-600 hover:bg-rose-100" %>
              <%= link_to "Edit", edit_collection_path(collection), class: "flex-1 text-center rounded-md bg-gray-50 px-3 py-2 text-sm font-semibold text-gray-600 hover:bg-gray-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="mt-8 text-center py-12 bg-white rounded-lg shadow">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No collections</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new collection.</p>
      <div class="mt-6">
        <%= link_to "New Collection", new_collection_path, class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500" %>
      </div>
    </div>
  <% end %>
</div>
