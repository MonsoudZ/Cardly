<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to gift_card_card_activities_path(@gift_card), class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Spending History
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900">
        <% case @card_activity.activity_type %>
        <% when "purchase" %>
          Log Purchase
        <% when "refund" %>
          Log Refund
        <% when "adjustment" %>
          Adjust Balance
        <% else %>
          Log Activity
        <% end %>
      </h1>
      <p class="text-gray-500">
        <%= @gift_card.brand_name %> - Current Balance: <%= number_to_currency(@gift_card.balance) %>
      </p>
    </div>

    <%= render "form", card_activity: @card_activity %>
  </div>
</div>
