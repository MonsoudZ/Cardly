<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to gift_card_path(@gift_card), class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to <%= @gift_card.brand_name %>
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Spending History</h1>
      <p class="text-gray-500"><%= @gift_card.brand_name %> - Current Balance: <%= number_to_currency(@gift_card.balance) %></p>
    </div>
    <%= link_to new_gift_card_card_activity_path(@gift_card), class: "inline-flex items-center px-4 py-2 bg-rose-600 text-white font-medium rounded-lg hover:bg-rose-700" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Log Activity
    <% end %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow p-4">
      <p class="text-sm text-gray-500">Total Spent</p>
      <p class="text-2xl font-bold text-red-600"><%= number_to_currency(@total_spent) %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <p class="text-sm text-gray-500">Total Refunded</p>
      <p class="text-2xl font-bold text-green-600"><%= number_to_currency(@total_refunded) %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <p class="text-sm text-gray-500">Net Spent</p>
      <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_spent - @total_refunded) %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Activity List -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow">
        <div class="px-4 py-3 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">All Activities</h3>
        </div>

        <% if @activities.any? %>
          <div class="divide-y divide-gray-200">
            <% @activities.each do |activity| %>
              <div class="p-4 hover:bg-gray-50">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <% case activity.activity_type %>
                      <% when "purchase" %>
                        <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                          <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                          </svg>
                        </div>
                      <% when "refund" %>
                        <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
                          </svg>
                        </div>
                      <% when "adjustment" %>
                        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                        </div>
                      <% else %>
                        <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        <%= activity.merchant.present? ? activity.merchant : activity.activity_type.titleize %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= activity.occurred_at.strftime("%b %d, %Y at %I:%M %p") %>
                      </p>
                      <% if activity.description.present? %>
                        <p class="text-xs text-gray-500 mt-1"><%= truncate(activity.description, length: 50) %></p>
                      <% end %>
                    </div>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium <%= activity.purchase? ? 'text-red-600' : 'text-green-600' %>">
                      <%= activity.purchase? ? "-" : "+" %><%= number_to_currency(activity.amount) %>
                    </p>
                    <p class="text-xs text-gray-500">
                      Balance: <%= number_to_currency(activity.balance_after) %>
                    </p>
                    <div class="mt-1 space-x-2">
                      <%= link_to "Edit", edit_gift_card_card_activity_path(@gift_card, activity), class: "text-xs text-gray-500 hover:text-gray-700" %>
                      <%= button_to "Delete", gift_card_card_activity_path(@gift_card, activity), method: :delete, class: "text-xs text-red-500 hover:text-red-700", data: { turbo_confirm: "Delete this activity and restore balance?" } %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            <p class="mt-2 text-gray-500">No spending activity yet.</p>
            <%= link_to "Log your first purchase", new_gift_card_card_activity_path(@gift_card, type: "purchase"), class: "mt-2 inline-block text-rose-600 hover:text-rose-700" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Top Merchants -->
      <% if @spending_by_merchant.any? %>
        <div class="bg-white rounded-lg shadow p-4">
          <h4 class="text-sm font-medium text-gray-900 mb-3">Top Merchants</h4>
          <div class="space-y-2">
            <% @spending_by_merchant.each do |merchant, amount| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600 truncate"><%= merchant %></span>
                <span class="text-sm font-medium text-gray-900"><%= number_to_currency(amount) %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow p-4">
        <h4 class="text-sm font-medium text-gray-900 mb-3">Quick Actions</h4>
        <div class="space-y-2">
          <%= link_to new_gift_card_card_activity_path(@gift_card, type: "purchase"), class: "block w-full px-3 py-2 text-sm text-center text-white bg-red-600 rounded-lg hover:bg-red-700" do %>
            Log Purchase
          <% end %>
          <%= link_to new_gift_card_card_activity_path(@gift_card, type: "refund"), class: "block w-full px-3 py-2 text-sm text-center text-white bg-green-600 rounded-lg hover:bg-green-700" do %>
            Log Refund
          <% end %>
          <%= link_to new_gift_card_card_activity_path(@gift_card, type: "adjustment"), class: "block w-full px-3 py-2 text-sm text-center text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200" do %>
            Adjust Balance
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
