<header class="bg-white border-b border-rose-100 shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <%= link_to "Cardly", root_path, class: "text-xl font-bold text-rose-600" %>
      <div class="hidden sm:flex sm:items-center">
        <div class="flex space-x-8">
          <%= link_to "Marketplace", "#", class: "px-3 text-gray-600 hover:text-rose-600" %>
          <%= link_to "My Wallet", "#", class: "px-3 text-gray-600 hover:text-rose-600" %>
        </div>
        <div class="flex items-center ml-8 space-x-4">
          <% if user_signed_in? %>
            <div class="relative" data-controller="dropdown">
              <button type="button" class="flex items-center gap-x-1 text-gray-600 hover:text-rose-600" data-action="click->dropdown#toggle click@window->dropdown#closeOnClickOutside">
                <img class="h-8 w-8 rounded-full bg-gray-50" src="https://placehold.co/32" alt="" />
                <span class="hidden lg:flex lg:items-center">
                  <span class="ml-4 text-sm font-semibold leading-6 text-gray-900" aria-hidden="true">
                    <%= current_user.email %>
                  </span>
                  <svg class="ml-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                  </svg>
                </span>
              </button>
              <div data-dropdown-target="menu" class="hidden absolute right-0 z-10 mt-2.5 w-48 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none">
                <%= link_to profile_path, class: "block px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-rose-50", role: "menuitem" do %>
                  <div class="flex items-center">
                    <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    Profile
                  </div>
                <% end %>
                <%= link_to edit_profile_path, class: "block px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-rose-50", role: "menuitem" do %>
                  <div class="flex items-center">
                    <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Settings
                  </div>
                <% end %>
                <%= button_to destroy_user_session_path, method: :delete, class: "block w-full text-left px-3 py-1 text-sm leading-6 text-gray-900 hover:bg-rose-50", role: "menuitem" do %>
                  <div class="flex items-center text-rose-600">
                    <svg class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Sign Out
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "text-gray-600 hover:text-rose-600" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "ml-4 bg-rose-600 text-white px-4 py-2 rounded-lg hover:bg-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2" %>
          <% end %>
        </div>
      </div>
      <!-- Mobile menu button -->
      <div class="sm:hidden">
        <button type="button" class="text-gray-600 hover:text-rose-600">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header> 