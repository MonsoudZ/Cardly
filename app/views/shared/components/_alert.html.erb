<%#
  Alert Component

  Usage:
    <%= render 'shared/components/alert', message: 'Operation successful!' %>
    <%= render 'shared/components/alert', message: 'Warning!', variant: :warning %>
    <%= render 'shared/components/alert', title: 'Error', message: 'Something went wrong', variant: :danger, dismissible: true %>

  Options:
    - message: Alert message (required)
    - title: Optional title
    - variant: :info (default), :success, :warning, :danger
    - dismissible: true/false (default: false)
    - icon: Show icon (default: true)
%>

<%
  message ||= ''
  title ||= nil
  variant ||= :info
  dismissible ||= false
  icon ||= true
  html_class ||= ''

  variant_styles = {
    info: {
      bg: 'bg-secondary-50',
      border: 'border-secondary-200',
      text: 'text-secondary-800',
      icon_color: 'text-secondary-500',
      title_color: 'text-secondary-900'
    },
    success: {
      bg: 'bg-success-50',
      border: 'border-success-200',
      text: 'text-success-800',
      icon_color: 'text-success-500',
      title_color: 'text-success-900'
    },
    warning: {
      bg: 'bg-warning-50',
      border: 'border-warning-200',
      text: 'text-warning-800',
      icon_color: 'text-warning-500',
      title_color: 'text-warning-900'
    },
    danger: {
      bg: 'bg-danger-50',
      border: 'border-danger-200',
      text: 'text-danger-800',
      icon_color: 'text-danger-500',
      title_color: 'text-danger-900'
    }
  }

  styles = variant_styles[variant]
  classes = "#{styles[:bg]} border #{styles[:border]} rounded-soft p-4 #{html_class}"

  icons = {
    info: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>',
    success: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>',
    warning: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>',
    danger: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>'
  }
%>

<div class="<%= classes %>" role="alert" data-controller="<%= 'dismissible' if dismissible %>">
  <div class="flex">
    <% if icon %>
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 <%= styles[:icon_color] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <%= icons[variant].html_safe %>
        </svg>
      </div>
    <% end %>
    <div class="<%= 'ml-3' if icon %> flex-1">
      <% if title.present? %>
        <h4 class="text-sm font-medium <%= styles[:title_color] %>"><%= title %></h4>
        <p class="mt-1 text-sm <%= styles[:text] %>"><%= message %></p>
      <% else %>
        <p class="text-sm <%= styles[:text] %>"><%= message %></p>
      <% end %>
    </div>
    <% if dismissible %>
      <div class="ml-auto pl-3">
        <button type="button" class="-mx-1.5 -my-1.5 rounded-soft p-1.5 inline-flex <%= styles[:text] %> hover:bg-white/50 focus:outline-none focus:ring-2 focus:ring-offset-2" data-action="dismissible#dismiss">
          <span class="sr-only">Dismiss</span>
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>
    <% end %>
  </div>
</div>
