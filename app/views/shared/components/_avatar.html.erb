<%#
  Avatar Component

  Usage:
    <%= render 'shared/components/avatar', name: 'John Doe' %>
    <%= render 'shared/components/avatar', name: 'Jane', image: user.avatar_url, size: :lg %>
    <%= render 'shared/components/avatar', name: 'User', status: :online %>

  Options:
    - name: User name for initials (required)
    - image: Image URL (optional)
    - size: :xs, :sm (default), :md, :lg, :xl
    - status: :online, :offline, :away, :busy (optional)
    - rounded: :full (default), :md
%>

<%
  name ||= 'User'
  image ||= nil
  size ||= :sm
  status ||= nil
  rounded ||= :full
  html_class ||= ''

  size_classes = {
    xs: 'w-6 h-6 text-xs',
    sm: 'w-8 h-8 text-sm',
    md: 'w-10 h-10 text-base',
    lg: 'w-12 h-12 text-lg',
    xl: 'w-16 h-16 text-xl'
  }

  status_colors = {
    online: 'bg-success-500',
    offline: 'bg-neutral-400',
    away: 'bg-warning-500',
    busy: 'bg-danger-500'
  }

  status_sizes = {
    xs: 'w-1.5 h-1.5',
    sm: 'w-2 h-2',
    md: 'w-2.5 h-2.5',
    lg: 'w-3 h-3',
    xl: 'w-4 h-4'
  }

  # Generate initials from name
  initials = name.split.map(&:first).take(2).join.upcase

  # Generate consistent background color from name
  colors = %w[bg-primary-500 bg-secondary-500 bg-success-500 bg-warning-500 bg-danger-500]
  color_index = name.sum % colors.length
  bg_color = colors[color_index]

  rounded_class = rounded == :full ? 'rounded-full' : 'rounded-soft'
%>

<div class="relative inline-flex <%= html_class %>">
  <% if image.present? %>
    <img
      src="<%= image %>"
      alt="<%= name %>"
      class="<%= size_classes[size] %> <%= rounded_class %> object-cover ring-2 ring-white"
    />
  <% else %>
    <div class="<%= size_classes[size] %> <%= rounded_class %> <%= bg_color %> flex items-center justify-center text-white font-medium ring-2 ring-white">
      <%= initials %>
    </div>
  <% end %>

  <% if status.present? %>
    <span class="absolute bottom-0 right-0 block <%= status_sizes[size] %> <%= status_colors[status] %> rounded-full ring-2 ring-white"></span>
  <% end %>
</div>
