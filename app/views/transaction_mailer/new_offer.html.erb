<h2>You've received a new offer!</h2>

<p>Hi <%= @seller.display_name %>,</p>

<p><strong><%= @buyer.display_name %></strong> wants to <%= @transaction.sale? ? 'purchase' : 'trade for' %> your gift card.</p>

<div class="card-details">
  <h3><%= @listing.brand_name %> Gift Card</h3>
  <div class="detail-row">
    <span class="detail-label">Card Value:</span>
    <span class="detail-value"><%= number_to_currency(@listing.balance) %></span>
  </div>
  <% if @transaction.sale? %>
    <div class="detail-row">
      <span class="detail-label">Offer Amount:</span>
      <span class="detail-value"><%= number_to_currency(@transaction.amount) %></span>
    </div>
  <% else %>
    <div class="detail-row">
      <span class="detail-label">Offered Card:</span>
      <span class="detail-value"><%= @transaction.offered_gift_card.brand_name %> (<%= number_to_currency(@transaction.offered_gift_card.balance) %>)</span>
    </div>
  <% end %>
</div>

<% if @transaction.message.present? %>
  <p><strong>Message from buyer:</strong></p>
  <blockquote style="border-left: 3px solid #e11d48; padding-left: 16px; margin: 16px 0; color: #4b5563;">
    <%= @transaction.message %>
  </blockquote>
<% end %>

<p style="text-align: center;">
  <%= link_to "View Offer", transaction_url(@transaction), class: "btn" %>
</p>

<p>You can accept or decline this offer from your transactions page.</p>
