<div class="page-container">
  <!-- Wallet Header -->
  <div class="section-header">
    <div>
      <h1 class="section-title">My Wallet</h1>
      <p class="section-subtitle">Manage all your gift cards in one place</p>
    </div>
    <%= link_to new_gift_card_path, class: "btn-primary btn-md" do %>
      <%= render 'shared/components/icon', name: 'plus', size: :sm %>
      <span class="ml-2">Add Gift Card</span>
    <% end %>
  </div>

  <!-- Wallet Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <%= render 'shared/components/stat_card',
        title: "Total Balance",
        value: number_to_currency(@total_balance),
        icon: "currency-dollar",
        variant: :primary %>

    <%= render 'shared/components/stat_card',
        title: "Total Cards",
        value: @gift_cards.count,
        icon: "credit-card" %>

    <%= render 'shared/components/stat_card',
        title: "Expiring Soon",
        value: @expiring_soon.count,
        icon: "clock",
        variant: :warning %>
  </div>

  <!-- Critical Expiration Alert (1 day or less) -->
  <% critical_cards = @expiring_soon.select { |c| c.days_until_expiration && c.days_until_expiration <= 1 } %>
  <% if critical_cards.any? %>
    <div class="mb-6 bg-danger-50 border-2 border-danger-300 rounded-card p-4 animate-pulse">
      <div class="flex items-start">
        <%= render 'shared/components/icon', name: 'exclamation', size: :lg, color: 'text-danger-600' %>
        <div class="flex-1 ml-3">
          <h3 class="text-base font-bold text-danger-800">URGENT: Cards Expiring Today/Tomorrow!</h3>
          <div class="mt-3 space-y-2">
            <% critical_cards.each do |card| %>
              <div class="flex items-center justify-between bg-white rounded-lg p-3 border border-danger-200">
                <div class="flex items-center space-x-3">
                  <img src="<%= card.brand_display_logo %>" alt="" class="w-10 h-6 object-contain">
                  <div>
                    <span class="font-semibold text-neutral-900"><%= card.brand_name %></span>
                    <span class="text-danger-600 text-sm ml-2 font-medium">
                      <% if card.days_until_expiration == 0 %>
                        Expires TODAY!
                      <% else %>
                        Expires TOMORROW!
                      <% end %>
                    </span>
                  </div>
                </div>
                <div class="flex items-center gap-3">
                  <span class="text-lg font-bold text-neutral-900"><%= number_to_currency(card.balance) %></span>
                  <%= link_to "Use Now", gift_card_path(card), class: "btn-danger btn-sm" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Expiring Soon Alert (2-30 days) -->
  <% warning_cards = @expiring_soon.reject { |c| c.days_until_expiration && c.days_until_expiration <= 1 } %>
  <% if warning_cards.any? %>
    <div class="mb-8">
      <%= render 'shared/components/alert', variant: :warning, dismissible: false do %>
        <div class="flex items-start">
          <div class="flex-1">
            <h3 class="text-sm font-medium text-warning-800">Cards Expiring Soon</h3>
            <div class="mt-2 text-sm text-warning-700 space-y-2">
              <% warning_cards.limit(5).each do |card| %>
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2">
                    <span class="font-medium"><%= card.brand_name %></span>
                    <span class="text-warning-600">(<%= number_to_currency(card.balance) %>)</span>
                  </div>
                  <span class="<%= card.days_until_expiration && card.days_until_expiration <= 7 ? 'text-warning-700 font-medium' : 'text-warning-600' %>">
                    <% days = card.days_until_expiration %>
                    <% if days && days <= 7 %>
                      <%= days %> day<%= days == 1 ? '' : 's' %> left
                    <% else %>
                      <%= card.expiration_date.strftime("%b %d") %>
                    <% end %>
                  </span>
                </div>
              <% end %>
              <% if warning_cards.count > 5 %>
                <p class="text-warning-600 font-medium">+ <%= warning_cards.count - 5 %> more cards expiring soon</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Tag Filters -->
  <% if @tags.any? || params[:tag].present? || params[:untagged].present? || params[:status].present? %>
    <div class="mb-6 card p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <%= render 'shared/components/icon', name: 'tag', size: :sm, color: 'text-neutral-400' %>
          <span class="text-sm font-medium text-neutral-700">Filter by Category</span>
        </div>
        <%= link_to tags_path, class: "text-sm text-primary-600 hover:text-primary-700 font-medium" do %>
          Manage Tags
        <% end %>
      </div>

      <div class="flex flex-wrap gap-2">
        <%= link_to wallet_path, class: "px-3 py-1.5 rounded-button text-sm font-medium transition-all #{params[:tag].blank? && params[:untagged].blank? ? 'bg-neutral-900 text-white' : 'bg-neutral-100 text-neutral-700 hover:bg-neutral-200'}" do %>
          All Cards
        <% end %>

        <% @tags.each do |tag| %>
          <%= link_to wallet_path(tag: tag.id), class: "px-3 py-1.5 rounded-button text-sm font-medium transition-all #{params[:tag].to_s == tag.id.to_s ? 'text-white' : 'hover:opacity-80'}", style: "#{params[:tag].to_s == tag.id.to_s ? "background-color: #{tag.color}; color: white;" : "background-color: #{tag.color}20; color: #{tag.color}; border: 1px solid #{tag.color}40;"}" do %>
            <%= tag.name %> (<%= tag.card_count %>)
          <% end %>
        <% end %>

        <% untagged_count = current_user.gift_cards.untagged.count %>
        <% if untagged_count > 0 %>
          <%= link_to wallet_path(untagged: true), class: "px-3 py-1.5 rounded-button text-sm font-medium transition-all #{params[:untagged].present? ? 'bg-neutral-500 text-white' : 'bg-neutral-100 text-neutral-600 hover:bg-neutral-200'}" do %>
            Untagged (<%= untagged_count %>)
          <% end %>
        <% end %>
      </div>

      <% if @selected_tag || params[:untagged].present? %>
        <div class="mt-3 pt-3 border-t border-neutral-100 flex items-center justify-between">
          <span class="text-sm text-neutral-500">
            Showing
            <% if @selected_tag %>
              <span class="font-medium" style="color: <%= @selected_tag.color %>"><%= @selected_tag.name %></span>
            <% else %>
              <span class="font-medium text-neutral-700">Untagged</span>
            <% end %>
            cards
          </span>
          <%= link_to "Clear filter", wallet_path, class: "text-sm text-primary-600 hover:text-primary-700 font-medium" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Gift Cards Grid -->
  <% if @gift_cards.any? %>
    <div class="content-grid-3">
      <% @gift_cards.each do |card| %>
        <%= link_to gift_card_path(card), class: "block group" do %>
          <div class="card-elevated p-4 hover-lift">
            <div class="flex items-center space-x-4">
              <img src="<%= card.brand_display_logo %>" alt="<%= card.brand_name %>" class="w-16 h-10 object-contain rounded">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-neutral-900 group-hover:text-primary-600 truncate transition-colors"><%= card.brand_name %></h3>
                <p class="text-sm text-neutral-500"><%= card.masked_card_number || "No card number" %></p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold text-neutral-900"><%= number_to_currency(card.balance) %></p>
                <% if card.expired? %>
                  <%= render 'shared/components/badge', text: "Expired", variant: :danger, size: :sm %>
                <% elsif card.expiring_soon? %>
                  <%= render 'shared/components/badge', text: "Expiring", variant: :warning, size: :sm %>
                <% elsif card.listed? %>
                  <%= render 'shared/components/badge', text: "Listed", variant: :secondary, size: :sm %>
                <% elsif card.used? %>
                  <%= render 'shared/components/badge', text: "Used", variant: :neutral, size: :sm %>
                <% else %>
                  <%= render 'shared/components/badge', text: "Active", variant: :success, size: :sm %>
                <% end %>
              </div>
            </div>
            <div class="mt-4">
              <%= render 'shared/components/progress_bar', value: card.balance_percentage, variant: :primary, size: :sm %>
              <div class="flex items-center justify-between mt-1">
                <p class="text-xs text-neutral-500"><%= card.balance_percentage %>% remaining</p>
                <% if card.tags.any? %>
                  <div class="flex items-center space-x-1">
                    <% card.tags.limit(2).each do |tag| %>
                      <span class="w-2 h-2 rounded-full" style="background-color: <%= tag.color %>" title="<%= tag.name %>"></span>
                    <% end %>
                    <% if card.tags.count > 2 %>
                      <span class="text-xs text-neutral-400">+<%= card.tags.count - 2 %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%= render 'shared/components/empty_state',
        icon: 'credit-card',
        title: 'No gift cards',
        description: 'Get started by adding your first gift card.',
        action_text: 'Add Gift Card',
        action_path: new_gift_card_path %>
  <% end %>
</div>
