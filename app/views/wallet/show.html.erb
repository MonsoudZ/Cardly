<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Wallet Header -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">My Wallet</h1>
      <%= link_to new_gift_card_path, class: "inline-flex items-center px-4 py-2 bg-rose-600 text-white rounded-lg hover:bg-rose-500 transition" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Gift Card
      <% end %>
    </div>
  </div>

  <!-- Wallet Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-br from-rose-500 to-rose-600 rounded-xl p-6 text-white shadow-lg">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-rose-100 text-sm">Total Balance</p>
          <p class="text-3xl font-bold"><%= number_to_currency(@total_balance) %></p>
        </div>
        <div class="bg-white/20 rounded-full p-3">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 shadow border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm">Total Cards</p>
          <p class="text-3xl font-bold text-gray-900"><%= @gift_cards.count %></p>
        </div>
        <div class="bg-rose-50 rounded-full p-3">
          <svg class="w-8 h-8 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl p-6 shadow border border-gray-100">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-gray-500 text-sm">Expiring Soon</p>
          <p class="text-3xl font-bold text-amber-600"><%= @expiring_soon.count %></p>
        </div>
        <div class="bg-amber-50 rounded-full p-3">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Expiring Soon Alert -->
  <% if @expiring_soon.any? %>
    <div class="mb-8 bg-amber-50 border border-amber-200 rounded-xl p-4">
      <div class="flex items-start">
        <svg class="w-5 h-5 text-amber-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div>
          <h3 class="text-sm font-medium text-amber-800">Cards Expiring Soon</h3>
          <div class="mt-2 text-sm text-amber-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @expiring_soon.limit(3).each do |card| %>
                <li><%= card.brand_name %> - <%= number_to_currency(card.balance) %> expires <%= card.expiration_date.strftime("%b %d, %Y") %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Gift Cards Grid -->
  <% if @gift_cards.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @gift_cards.each do |card| %>
        <%= link_to gift_card_path(card), class: "block" do %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition group">
            <div class="p-4 flex items-center space-x-4">
              <img src="<%= card.brand_display_logo %>" alt="<%= card.brand_name %>" class="w-16 h-10 object-contain rounded">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-rose-600 truncate"><%= card.brand_name %></h3>
                <p class="text-sm text-gray-500"><%= card.masked_card_number || "No card number" %></p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold text-gray-900"><%= number_to_currency(card.balance) %></p>
                <% if card.expired? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Expired</span>
                <% elsif card.expiring_soon? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">Expiring</span>
                <% elsif card.listed? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Listed</span>
                <% elsif card.used? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">Used</span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Active</span>
                <% end %>
              </div>
            </div>
            <div class="px-4 pb-4">
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-rose-600 h-2 rounded-full" style="width: <%= card.balance_percentage %>%"></div>
              </div>
              <p class="text-xs text-gray-500 mt-1"><%= card.balance_percentage %>% remaining</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-gray-50 rounded-xl">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No gift cards</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by adding your first gift card.</p>
      <div class="mt-6">
        <%= link_to new_gift_card_path, class: "inline-flex items-center px-4 py-2 bg-rose-600 text-white rounded-lg hover:bg-rose-500" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Gift Card
        <% end %>
      </div>
    </div>
  <% end %>
</div>
