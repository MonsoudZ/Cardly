<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Card Categories</h1>
      <p class="text-gray-500">Organize your gift cards with custom tags</p>
    </div>
    <div class="flex space-x-2">
      <% if @tags.empty? %>
        <%= button_to create_suggestions_tags_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Add Suggested Tags
        <% end %>
      <% end %>
      <%= link_to new_tag_path, class: "inline-flex items-center px-4 py-2 bg-rose-600 text-white font-medium rounded-lg hover:bg-rose-700" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Tag
      <% end %>
    </div>
  </div>

  <% if @tags.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @tags.each do |tag| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center space-x-2">
              <span class="w-4 h-4 rounded-full" style="background-color: <%= tag.color %>"></span>
              <h3 class="font-medium text-gray-900"><%= tag.name %></h3>
            </div>
            <div class="flex items-center space-x-1">
              <%= link_to edit_tag_path(tag), class: "p-1 text-gray-400 hover:text-gray-600" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
              <%= button_to tag_path(tag), method: :delete, class: "p-1 text-gray-400 hover:text-red-600", data: { turbo_confirm: "Delete this tag?" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            </div>
          </div>

          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500"><%= tag.card_count %> card<%= tag.card_count == 1 ? "" : "s" %></span>
            <span class="font-medium text-gray-900"><%= number_to_currency(tag.total_balance) %></span>
          </div>

          <% if tag.card_count > 0 %>
            <%= link_to wallet_path(tag: tag.id), class: "mt-3 block text-center text-sm text-rose-600 hover:text-rose-700" do %>
              View Cards
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% if @untagged_count > 0 %>
        <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-200 p-4">
          <div class="flex items-center space-x-2 mb-3">
            <span class="w-4 h-4 rounded-full bg-gray-300"></span>
            <h3 class="font-medium text-gray-500">Untagged</h3>
          </div>

          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500"><%= @untagged_count %> card<%= @untagged_count == 1 ? "" : "s" %></span>
          </div>

          <%= link_to wallet_path(untagged: true), class: "mt-3 block text-center text-sm text-gray-600 hover:text-gray-700" do %>
            View Untagged Cards
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No tags yet</h3>
      <p class="mt-2 text-gray-500">Create tags to organize your gift cards by category.</p>
      <div class="mt-6 space-x-3">
        <%= button_to create_suggestions_tags_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          Add Suggested Tags
        <% end %>
        <%= link_to new_tag_path, class: "inline-flex items-center px-4 py-2 bg-rose-600 text-white font-medium rounded-lg hover:bg-rose-700" do %>
          Create Custom Tag
        <% end %>
      </div>
    </div>
  <% end %>
</div>
