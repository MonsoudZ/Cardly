<!-- Hero Section -->
<div class="relative isolate overflow-hidden bg-gradient-to-b from-rose-50 to-white w-full">
  <div class="w-full px-6 pt-10 pb-24">
    <div class="w-full max-w-none text-center">
      <div class="mb-8">
        <span class="inline-flex space-x-6">
          <span class="rounded-full bg-rose-600/10 px-3 py-1 text-sm font-semibold leading-6 text-rose-600 ring-1 ring-inset ring-rose-600/10">New</span>
          <span class="inline-flex items-center space-x-2 text-sm font-medium leading-6 text-gray-600">
            <span>Your gift cards, organized</span>
          </span>
        </span>
      </div>
      <h1 class="text-5xl font-bold tracking-tight text-gray-900 sm:text-7xl">Never lose track of a gift card again</h1>
      <p class="mt-8 text-xl leading-8 text-gray-600 max-w-4xl mx-auto">
        Store all your gift cards in one secure wallet. Track balances, get expiration alerts, and trade or sell cards you don't need.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <%= link_to "Get started free", new_user_registration_path, class: "rounded-md bg-rose-600 px-6 py-3 text-lg font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600" %>
