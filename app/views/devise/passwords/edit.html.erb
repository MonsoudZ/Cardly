<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl shadow-card mb-4">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-neutral-900">Set new password</h2>
      <p class="mt-2 text-sm text-neutral-600">Choose a strong password for your account</p>
    </div>

    <!-- Card -->
    <div class="card p-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div>
          <%= f.label :password, "New password", class: "form-label" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input", placeholder: "Enter new password" %>
          <% if @minimum_password_length %>
            <p class="form-hint">At least <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "Confirm new password" %>
        </div>

        <div>
          <%= f.submit "Change my password", class: "btn-primary btn-lg w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
