<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl shadow-card mb-4">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-neutral-900">Welcome back</h2>
      <p class="mt-2 text-sm text-neutral-600">Sign in to your Cardly account</p>
    </div>

    <!-- Card -->
    <div class="card p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "you@example.com" %>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= f.label :password, class: "form-label" %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-primary-600 hover:text-primary-500" %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-neutral-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-neutral-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-neutral-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-neutral-500">New to Cardly?</span>
          </div>
        </div>

        <div class="mt-6">
          <%= link_to new_registration_path(resource_name), class: "btn-ghost btn-lg w-full" do %>
            Create an account
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
