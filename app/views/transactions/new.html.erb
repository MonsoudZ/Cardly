<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to listing_path(@listing), class: "inline-flex items-center text-gray-600 hover:text-rose-600" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Listing
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">
        <% if @listing.sale? %>
          Purchase Gift Card
        <% else %>
          Propose Trade
        <% end %>
      </h1>

      <!-- Card Summary -->
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <div class="flex items-center space-x-4">
          <img src="<%= @listing.brand_display_logo %>" alt="" class="w-16 h-10 object-contain rounded bg-white p-2">
          <div class="flex-1">
            <p class="font-semibold text-gray-900"><%= @listing.brand_name %> Gift Card</p>
            <p class="text-sm text-gray-500">Listed by <%= @listing.user.display_name %></p>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-500">Value</p>
            <p class="font-bold text-gray-900"><%= number_to_currency(@listing.balance) %></p>
          </div>
        </div>
      </div>

      <%= form_with model: @transaction, url: listing_transactions_path(@listing), class: "space-y-6" do |form| %>
        <% if @transaction.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">There were errors with your submission</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @transaction.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <% if @listing.sale? %>
          <!-- Sale Summary -->
          <div class="space-y-3">
            <div class="flex justify-between py-3 border-b border-gray-100">
              <span class="text-gray-600">Card Value</span>
              <span class="text-gray-900"><%= number_to_currency(@listing.balance) %></span>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-100">
              <span class="text-gray-600">Asking Price</span>
              <span class="font-semibold text-rose-600"><%= number_to_currency(@listing.asking_price) %></span>
            </div>
            <% if @listing.discount_percentage.present? && @listing.discount_percentage > 0 %>
              <div class="flex justify-between py-3 border-b border-gray-100">
                <span class="text-gray-600">Savings at Asking Price</span>
                <span class="font-semibold text-green-600"><%= number_to_currency(@listing.savings) %> (<%= @listing.discount_percentage %>%)</span>
              </div>
            <% end %>
          </div>

          <!-- Custom Offer Amount -->
          <div class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between mb-3">
              <label class="block text-sm font-medium text-gray-700">Your Offer</label>
              <span class="text-xs text-gray-500">Make an offer at or below asking price</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="relative flex-1">
                <span class="absolute left-3 top-3 text-gray-500">$</span>
                <%= form.number_field :amount, value: @listing.asking_price, min: 0.01, max: @listing.balance, step: 0.01, class: "w-full pl-7 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500", id: "offer_amount" %>
              </div>
              <button type="button" onclick="document.getElementById('offer_amount').value = <%= @listing.asking_price %>" class="px-3 py-2 text-sm text-rose-600 hover:bg-rose-50 rounded-lg border border-rose-200">
                Use Asking Price
              </button>
            </div>
            <p class="text-xs text-gray-500 mt-2">
              Tip: Offers below asking price may be rejected or countered by the seller.
            </p>
          </div>
        <% else %>
          <!-- Trade Card Selection -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3">Select a card to offer</label>
            <% if @available_cards.any? %>
              <div class="space-y-2">
                <% @available_cards.each do |card| %>
                  <label class="flex items-center p-4 border border-gray-200 rounded-lg cursor-pointer hover:border-rose-300 has-[:checked]:border-rose-500 has-[:checked]:bg-rose-50">
                    <%= form.radio_button :offered_gift_card_id, card.id, class: "sr-only" %>
                    <img src="<%= card.brand_display_logo %>" alt="" class="w-12 h-8 object-contain rounded bg-gray-50 p-1">
                    <div class="ml-4 flex-1">
                      <p class="font-medium text-gray-900"><%= card.brand_name %></p>
                      <p class="text-sm text-gray-500">Balance: <%= number_to_currency(card.balance) %></p>
                    </div>
                    <div class="w-5 h-5 border-2 border-gray-300 rounded-full flex items-center justify-center peer-checked:border-rose-500">
                      <div class="w-2.5 h-2.5 bg-rose-500 rounded-full hidden peer-checked:block"></div>
                    </div>
                  </label>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8 bg-gray-50 rounded-lg">
                <p class="text-gray-500">You don't have any cards available to trade.</p>
                <%= link_to new_gift_card_path, class: "mt-2 inline-block text-rose-600 hover:text-rose-500" do %>
                  Add a gift card to your wallet
                <% end %>
              </div>
            <% end %>
          </div>

          <% if @listing.trade_preferences.present? %>
            <div class="bg-blue-50 rounded-lg p-4">
              <p class="text-sm font-medium text-blue-800">Seller is looking for:</p>
              <p class="mt-1 text-blue-700"><%= @listing.trade_preferences %></p>
            </div>
          <% end %>
        <% end %>

        <!-- Optional Message -->
        <div>
          <label for="transaction_message" class="block text-sm font-medium text-gray-700 mb-2">Message (optional)</label>
          <%= form.text_area :message, rows: 3, class: "block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500", placeholder: "Add a note to the seller..." %>
        </div>

        <!-- Submit -->
        <div class="pt-6 border-t border-gray-100">
          <% if @listing.sale? %>
            <%= form.submit "Send Purchase Offer", class: "w-full inline-flex items-center justify-center px-4 py-3 bg-rose-600 text-white rounded-lg hover:bg-rose-500 font-medium cursor-pointer" %>
            <p class="mt-3 text-xs text-center text-gray-500">
              The seller will review your offer. Payment will be handled directly between you and the seller.
            </p>
          <% else %>
            <% if @available_cards.any? %>
              <%= form.submit "Send Trade Offer", class: "w-full inline-flex items-center justify-center px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-500 font-medium cursor-pointer" %>
              <p class="mt-3 text-xs text-center text-gray-500">
                If accepted, your selected card will be transferred to the seller and you'll receive their card.
              </p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
