<%= form_with model: [@collection, collection_item], class: "space-y-6" do |form| %>
  <% if collection_item.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(collection_item.errors.count, "error") %> prohibited this item from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% collection_item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :card_id, "Card", class: "block text-sm font-medium leading-6 text-gray-900" %>
    <% if @cards.any? %>
      <%= form.select :card_id,
          options_from_collection_for_select(@cards, :id, :name, collection_item.card_id),
          { prompt: "Select a card..." },
          class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3" %>
    <% else %>
      <p class="mt-2 text-sm text-gray-500">No cards available. All cards are already in this collection.</p>
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :condition, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.select :condition,
          options_for_select(CollectionItem::CONDITIONS.map { |c| [c.titleize, c] }, collection_item.condition),
          { prompt: "Select condition..." },
          class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3" %>
    </div>

    <div>
      <%= form.label :quantity, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.number_field :quantity, min: 1, value: collection_item.quantity || 1, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :acquired_price, "Acquired Price ($)", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.number_field :acquired_price, step: 0.01, min: 0, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "0.00" %>
    </div>

    <div>
      <%= form.label :acquired_date, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= form.date_field :acquired_date, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3" %>
    </div>
  </div>

  <div class="border-t border-gray-200 pt-6">
    <h3 class="text-sm font-medium text-gray-900 mb-4">Trading Options</h3>

    <div class="space-y-4">
      <div class="flex items-center">
        <%= form.check_box :for_trade, class: "h-4 w-4 rounded border-gray-300 text-rose-600 focus:ring-rose-600" %>
        <%= form.label :for_trade, class: "ml-3 block text-sm leading-6 text-gray-900" do %>
          Available for trade
        <% end %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :for_sale, class: "h-4 w-4 rounded border-gray-300 text-rose-600 focus:ring-rose-600" %>
        <%= form.label :for_sale, class: "ml-3 block text-sm leading-6 text-gray-900" do %>
          Available for sale
        <% end %>
      </div>

      <div>
        <%= form.label :asking_price, "Asking Price ($)", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= form.number_field :asking_price, step: 0.01, min: 0, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "0.00" %>
        <p class="mt-1 text-sm text-gray-500">Set a price if listing for sale</p>
      </div>
    </div>
  </div>

  <div>
    <%= form.label :notes, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_area :notes, rows: 3, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "Any notes about this card..." %>
  </div>

  <div class="flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", @collection, class: "text-sm font-semibold leading-6 text-gray-900" %>
    <%= form.submit class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600 cursor-pointer" %>
  </div>
<% end %>
