<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <!-- Profile Header -->
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex sm:items-center">
          <div class="sm:flex-shrink-0">
            <img class="h-24 w-24 rounded-full object-cover" src="<%= @user.avatar.presence || 'https://placehold.co/96?text=' + @user.display_name.first.upcase %>" alt="<%= @user.display_name %>" />
          </div>
          <div class="mt-4 sm:ml-6 sm:mt-0">
            <h1 class="text-2xl font-bold text-gray-900"><%= @user.display_name %></h1>
            <p class="mt-1 text-sm text-gray-500">Member since <%= @user.created_at.strftime("%B %Y") %></p>

            <!-- Rating Display -->
            <div class="mt-2 flex items-center">
              <% if @user.rating_count > 0 %>
                <div class="flex items-center">
                  <% 5.times do |i| %>
                    <svg class="w-5 h-5 <%= i < @user.average_rating.to_i ? 'text-yellow-400' : 'text-gray-200' %>" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                  <span class="ml-2 text-sm font-medium text-gray-700"><%= @user.average_rating %></span>
                  <span class="ml-1 text-sm text-gray-500">(<%= pluralize(@user.rating_count, "review") %>)</span>
                </div>
              <% else %>
                <span class="text-sm text-gray-500">No ratings yet</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="mt-6 grid grid-cols-2 gap-4 sm:grid-cols-4">
    <div class="bg-white overflow-hidden rounded-lg shadow px-4 py-5 sm:p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Active Listings</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @user.active_listings_count %></dd>
    </div>
    <div class="bg-white overflow-hidden rounded-lg shadow px-4 py-5 sm:p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Completed Sales</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @user.completed_sales_count %></dd>
    </div>
    <div class="bg-white overflow-hidden rounded-lg shadow px-4 py-5 sm:p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Completed Purchases</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @user.completed_purchases_count %></dd>
    </div>
    <div class="bg-white overflow-hidden rounded-lg shadow px-4 py-5 sm:p-6">
      <dt class="text-sm font-medium text-gray-500 truncate">Positive Rating</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        <% if @user.positive_rating_percentage %>
          <%= @user.positive_rating_percentage %>%
        <% else %>
          â€”
        <% end %>
      </dd>
    </div>
  </div>

  <!-- Seller/Buyer Ratings Breakdown -->
  <% if @user.rating_count > 0 %>
    <div class="mt-6 bg-white overflow-hidden rounded-lg shadow">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Rating Breakdown</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">As Seller</span>
              <% if @user.seller_rating %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="ml-1 text-sm text-gray-700"><%= @user.seller_rating %></span>
                  <span class="ml-1 text-sm text-gray-500">(<%= @user.seller_rating_count %> reviews)</span>
                </div>
              <% else %>
                <span class="text-sm text-gray-500">No seller ratings yet</span>
              <% end %>
            </div>
            <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
              <% seller_pct = @user.seller_rating ? (@user.seller_rating / 5.0 * 100) : 0 %>
              <div class="bg-yellow-400 h-2 rounded-full" style="width: <%= seller_pct %>%"></div>
            </div>
          </div>
          <div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">As Buyer</span>
              <% if @user.buyer_rating %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="ml-1 text-sm text-gray-700"><%= @user.buyer_rating %></span>
                  <span class="ml-1 text-sm text-gray-500">(<%= @user.buyer_rating_count %> reviews)</span>
                </div>
              <% else %>
                <span class="text-sm text-gray-500">No buyer ratings yet</span>
              <% end %>
            </div>
            <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
              <% buyer_pct = @user.buyer_rating ? (@user.buyer_rating / 5.0 * 100) : 0 %>
              <div class="bg-yellow-400 h-2 rounded-full" style="width: <%= buyer_pct %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Active Listings -->
  <div class="mt-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-medium text-gray-900">Active Listings</h2>
      <% if @user.active_listings_count > 6 %>
        <%= link_to "View all", marketplace_path(seller: @user.id), class: "text-sm text-rose-600 hover:text-rose-500" %>
      <% end %>
    </div>

    <% if @active_listings.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @active_listings.each do |listing| %>
          <%= render partial: "marketplace/listing_card", locals: { listing: listing } %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow px-6 py-10 text-center">
        <p class="text-gray-500">No active listings at the moment.</p>
      </div>
    <% end %>
  </div>

  <!-- Recent Reviews -->
  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Recent Reviews</h2>

    <% if @recent_ratings.any? %>
      <div class="bg-white shadow overflow-hidden rounded-lg divide-y divide-gray-200">
        <% @recent_ratings.each do |rating| %>
          <div class="px-4 py-5 sm:px-6">
            <div class="flex items-start justify-between">
              <div class="flex items-center">
                <img class="h-10 w-10 rounded-full object-cover" src="<%= rating.rater.avatar.presence || 'https://placehold.co/40?text=' + rating.rater.display_name.first.upcase %>" alt="<%= rating.rater.display_name %>" />
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">
                    <%= link_to rating.rater.display_name, user_path(rating.rater), class: "hover:text-rose-600" %>
                  </p>
                  <div class="flex items-center mt-1">
                    <% 5.times do |i| %>
                      <svg class="w-4 h-4 <%= i < rating.score ? 'text-yellow-400' : 'text-gray-200' %>" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    <% end %>
                    <span class="ml-2 text-xs text-gray-500">as <%= rating.role.capitalize %></span>
                  </div>
                </div>
              </div>
              <span class="text-xs text-gray-500"><%= time_ago_in_words(rating.created_at) %> ago</span>
            </div>
            <% if rating.comment.present? %>
              <p class="mt-3 text-sm text-gray-600"><%= rating.comment %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow px-6 py-10 text-center">
        <p class="text-gray-500">No reviews yet.</p>
      </div>
    <% end %>
  </div>
</div>
