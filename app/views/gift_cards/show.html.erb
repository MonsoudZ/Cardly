<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to wallet_path, class: "inline-flex items-center text-gray-600 hover:text-rose-600" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Wallet
    <% end %>
  </div>

  <!-- Card Header -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden mb-6">
    <div class="p-6 flex items-start justify-between">
      <div class="flex items-center space-x-4">
        <img src="<%= @gift_card.brand_display_logo %>" alt="<%= @gift_card.brand_name %>" class="w-24 h-16 object-contain rounded-lg bg-gray-50 p-2">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @gift_card.brand_name %></h1>
          <p class="text-gray-500">Added <%= @gift_card.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
      <div class="flex items-center space-x-2">
        <%= link_to edit_gift_card_path(@gift_card), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
        <%= button_to gift_card_path(@gift_card), method: :delete, class: "inline-flex items-center px-3 py-2 border border-red-300 rounded-lg text-sm font-medium text-red-700 bg-white hover:bg-red-50", data: { turbo_confirm: "Are you sure you want to delete this gift card?" } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Balance Card -->
    <div class="lg:col-span-2">
      <div class="bg-gradient-to-br from-rose-500 to-rose-600 rounded-xl p-6 text-white shadow-lg">
        <div class="flex justify-between items-start mb-4">
          <div>
            <p class="text-rose-100 text-sm">Current Balance</p>
            <p class="text-4xl font-bold"><%= number_to_currency(@gift_card.balance) %></p>
          </div>
          <% if @gift_card.expired? %>
            <span class="px-3 py-1 bg-red-500 rounded-full text-sm font-medium">Expired</span>
          <% elsif @gift_card.expiring_soon? %>
            <span class="px-3 py-1 bg-amber-500 rounded-full text-sm font-medium">Expiring Soon</span>
          <% elsif @gift_card.listed? %>
            <span class="px-3 py-1 bg-blue-500 rounded-full text-sm font-medium">Listed</span>
          <% elsif @gift_card.used? %>
            <span class="px-3 py-1 bg-gray-500 rounded-full text-sm font-medium">Used</span>
          <% else %>
            <span class="px-3 py-1 bg-green-500 rounded-full text-sm font-medium">Active</span>
          <% end %>
        </div>

        <div class="mb-4">
          <div class="flex justify-between text-sm text-rose-100 mb-1">
            <span>Balance remaining</span>
            <span><%= @gift_card.balance_percentage %>%</span>
          </div>
          <div class="w-full bg-rose-400/50 rounded-full h-3">
            <div class="bg-white h-3 rounded-full" style="width: <%= @gift_card.balance_percentage %>%"></div>
          </div>
        </div>

        <div class="flex justify-between text-sm">
          <span class="text-rose-100">Original Value</span>
          <span class="font-medium"><%= number_to_currency(@gift_card.original_value) %></span>
        </div>
      </div>

      <!-- Card Details -->
      <div class="mt-6 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Card Details</h2>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="bg-gray-50 rounded-lg p-4">
            <dt class="text-sm text-gray-500">Card Number</dt>
            <dd class="mt-1 text-lg font-mono font-medium text-gray-900">
              <% if @gift_card.card_number.present? %>
                <%= @gift_card.card_number %>
                <button type="button" class="ml-2 text-gray-400 hover:text-gray-600" onclick="navigator.clipboard.writeText('<%= @gift_card.card_number %>')">
                  <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                </button>
              <% else %>
                <span class="text-gray-400">Not provided</span>
              <% end %>
            </dd>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <dt class="text-sm text-gray-500">PIN</dt>
            <dd class="mt-1 text-lg font-mono font-medium text-gray-900">
              <% if @gift_card.pin.present? %>
                <span data-controller="reveal" data-reveal-hidden-value="true">
                  <span data-reveal-target="content"><%= @gift_card.masked_pin %></span>
                  <span data-reveal-target="revealed" class="hidden"><%= @gift_card.pin %></span>
                  <button type="button" data-action="click->reveal#toggle" class="ml-2 text-gray-400 hover:text-gray-600">
                    <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </button>
                </span>
              <% else %>
                <span class="text-gray-400">Not provided</span>
              <% end %>
            </dd>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <dt class="text-sm text-gray-500">Expiration Date</dt>
            <dd class="mt-1 text-lg font-medium text-gray-900">
              <%= @gift_card.expiration_date&.strftime("%B %d, %Y") || "No expiration" %>
            </dd>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <dt class="text-sm text-gray-500">Acquired From</dt>
            <dd class="mt-1 text-lg font-medium text-gray-900">
              <%= @gift_card.acquired_from&.titleize || "Not specified" %>
            </dd>
          </div>
        </dl>

        <% if @gift_card.notes.present? %>
          <div class="mt-4 bg-gray-50 rounded-lg p-4">
            <dt class="text-sm text-gray-500">Notes</dt>
            <dd class="mt-1 text-gray-900"><%= @gift_card.notes %></dd>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>

        <div class="space-y-3">
          <% unless @gift_card.listed? || @gift_card.used? || @gift_card.expired? %>
            <%= button_to list_for_sale_gift_card_path(@gift_card), class: "w-full inline-flex items-center justify-center px-4 py-2 border border-rose-600 rounded-lg text-sm font-medium text-rose-600 bg-white hover:bg-rose-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              List for Sale
            <% end %>

            <%= button_to list_for_trade_gift_card_path(@gift_card), class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
              </svg>
              List for Trade
            <% end %>
          <% end %>

          <% if @gift_card.listed? && @gift_card.listing.present? %>
            <%= link_to listing_path(@gift_card.listing), class: "w-full inline-flex items-center justify-center px-4 py-2 border border-blue-600 rounded-lg text-sm font-medium text-blue-600 bg-white hover:bg-blue-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              View Listing
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Brand Info -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Brand</h2>

        <%= link_to brand_path(@gift_card.brand), class: "flex items-center hover:bg-gray-50 -mx-2 px-2 py-2 rounded-lg" do %>
          <img src="<%= @gift_card.brand_display_logo %>" alt="<%= @gift_card.brand_name %>" class="w-12 h-8 object-contain">
          <div class="ml-3">
            <p class="font-medium text-gray-900"><%= @gift_card.brand_name %></p>
            <p class="text-sm text-gray-500">View all <%= @gift_card.brand_name %> listings</p>
          </div>
          <svg class="w-5 h-5 ml-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
