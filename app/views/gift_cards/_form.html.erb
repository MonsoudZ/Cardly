<%= form_with model: gift_card, class: "space-y-6" do |f| %>
  <% if gift_card.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% gift_card.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Card Information</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :brand_id, "Brand", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :brand_id, Brand.active.order(:name), :id, :name,
            { prompt: "Select a brand" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500" } %>
      </div>

      <div>
        <%= f.label :original_value, "Original Value", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">$</span>
          </div>
          <%= f.number_field :original_value, step: 0.01, min: 0.01, class: "block w-full pl-7 rounded-md border-gray-300 focus:border-rose-500 focus:ring-rose-500" %>
        </div>
      </div>

      <div>
        <%= f.label :balance, "Current Balance", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">$</span>
          </div>
          <%= f.number_field :balance, step: 0.01, min: 0, class: "block w-full pl-7 rounded-md border-gray-300 focus:border-rose-500 focus:ring-rose-500" %>
        </div>
      </div>

      <div>
        <%= f.label :expiration_date, "Expiration Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :expiration_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500" %>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Card Details</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :card_number, "Card Number", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :card_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500", placeholder: "Enter card number" %>
        <p class="mt-1 text-xs text-gray-500">This will be securely stored and partially masked when displayed.</p>
      </div>

      <div>
        <%= f.label :pin, "PIN", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :pin, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500", placeholder: "Enter PIN if applicable" %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :barcode_data, "Barcode Data", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :barcode_data, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500", placeholder: "Barcode number or data" %>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Additional Information</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :acquired_date, "Acquired Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :acquired_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500" %>
      </div>

      <div>
        <%= f.label :acquired_from, "How did you get this card?", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :acquired_from, GiftCard::ACQUIRED_FROM.map { |a| [a.titleize, a] },
            {},
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500" } %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500", placeholder: "Any additional notes about this card..." %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", gift_cards_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit gift_card.new_record? ? "Add Gift Card" : "Update Gift Card", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-rose-600 hover:bg-rose-500 cursor-pointer" %>
  </div>
<% end %>
