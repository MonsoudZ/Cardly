<%= form_with model: gift_card, class: "space-y-6" do |f| %>
  <% if gift_card.errors.any? %>
    <div class="alert-danger">
      <div class="flex">
        <%= render 'shared/components/icon', name: 'x', size: :md, color: 'text-danger-400' %>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-danger-800">Please fix the following errors:</h3>
          <ul class="mt-2 text-sm text-danger-700 list-disc list-inside space-y-1">
            <% gift_card.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card p-6">
    <h3 class="text-lg font-semibold text-neutral-900 mb-4">Card Information</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :brand_id, "Brand", class: "form-label" %>
        <%= f.collection_select :brand_id, Brand.active.order(:name), :id, :name,
            { prompt: "Select a brand" },
            { class: "form-input" } %>
      </div>

      <div>
        <%= f.label :original_value, "Original Value", class: "form-label" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-neutral-500 text-sm">$</span>
          </div>
          <%= f.number_field :original_value, step: 0.01, min: 0.01, class: "form-input pl-7" %>
        </div>
      </div>

      <div>
        <%= f.label :balance, "Current Balance", class: "form-label" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-neutral-500 text-sm">$</span>
          </div>
          <%= f.number_field :balance, step: 0.01, min: 0, class: "form-input pl-7" %>
        </div>
      </div>

      <div>
        <%= f.label :expiration_date, "Expiration Date", class: "form-label" %>
        <%= f.date_field :expiration_date, class: "form-input" %>
        <p class="form-hint">We'll send you reminders before your card expires.</p>
      </div>
    </div>
  </div>

  <div class="card p-6">
    <h3 class="text-lg font-semibold text-neutral-900 mb-4">Card Details</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :card_number, "Card Number", class: "form-label" %>
        <%= f.text_field :card_number, class: "form-input font-mono", placeholder: "Enter card number" %>
        <p class="form-hint">This will be securely stored and partially masked when displayed.</p>
      </div>

      <div>
        <%= f.label :pin, "PIN", class: "form-label" %>
        <%= f.text_field :pin, class: "form-input font-mono", placeholder: "Enter PIN if applicable" %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :barcode_data, "Barcode Data", class: "form-label" %>
        <%= f.text_field :barcode_data, class: "form-input font-mono", placeholder: "Barcode number or data" %>
      </div>
    </div>
  </div>

  <div class="card p-6">
    <h3 class="text-lg font-semibold text-neutral-900 mb-4">Additional Information</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :acquired_date, "Acquired Date", class: "form-label" %>
        <%= f.date_field :acquired_date, class: "form-input" %>
      </div>

      <div>
        <%= f.label :acquired_from, "How did you get this card?", class: "form-label" %>
        <%= f.select :acquired_from, GiftCard::ACQUIRED_FROM.map { |a| [a.titleize, a] },
            {},
            { class: "form-input" } %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :notes, "Notes", class: "form-label" %>
        <%= f.text_area :notes, rows: 3, class: "form-input", placeholder: "Any additional notes about this card..." %>
      </div>
    </div>
  </div>

  <% if current_user.tags.any? %>
    <div class="card p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-neutral-900">Categories</h3>
        <%= link_to "Manage Tags", tags_path, class: "text-sm text-primary-600 hover:text-primary-700 font-medium" %>
      </div>

      <div class="flex flex-wrap gap-2">
        <% current_user.tags.alphabetical.each do |tag| %>
          <label class="inline-flex items-center cursor-pointer">
            <%= f.check_box :tag_ids, { multiple: true, class: "sr-only peer", checked: gift_card.tags.include?(tag) }, tag.id, nil %>
            <span class="px-3 py-1.5 rounded-button text-sm font-medium border-2 transition-all peer-checked:ring-2 peer-checked:ring-offset-1" style="border-color: <%= tag.color %>; color: <%= tag.color %>; --tw-ring-color: <%= tag.color %>">
              <span class="peer-checked:hidden"><%= tag.name %></span>
              <span class="hidden peer-checked:inline" style="background-color: <%= tag.color %>; color: white; margin: -6px -12px; padding: 6px 12px; border-radius: 9999px;"><%= tag.name %></span>
            </span>
          </label>
        <% end %>
      </div>
      <p class="form-hint mt-2">Click to select categories for this card</p>
    </div>
  <% else %>
    <div class="card-bordered border-dashed p-6 text-center">
      <%= render 'shared/components/icon', name: 'tag', size: :lg, color: 'text-neutral-400' %>
      <p class="mt-2 text-sm text-neutral-500">No tags yet. <%= link_to "Create tags", tags_path, class: "text-primary-600 hover:text-primary-700 font-medium" %> to organize your cards.</p>
    </div>
  <% end %>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", gift_cards_path, class: "btn-ghost btn-md" %>
    <%= f.submit gift_card.new_record? ? "Add Gift Card" : "Update Gift Card", class: "btn-primary btn-md cursor-pointer" %>
  </div>
<% end %>
