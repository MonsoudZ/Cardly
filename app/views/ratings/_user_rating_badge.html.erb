<%# Display a compact rating badge for a user %>
<%# Usage: render 'ratings/user_rating_badge', user: @user %>

<% if user.rating_count > 0 %>
  <div class="flex items-center text-sm">
    <div class="flex items-center">
      <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      <span class="ml-1 font-medium text-gray-900"><%= user.average_rating %></span>
    </div>
    <span class="mx-1 text-gray-400">·</span>
    <span class="text-gray-500"><%= pluralize(user.rating_count, 'rating') %></span>
    <% if user.positive_rating_percentage %>
      <span class="mx-1 text-gray-400">·</span>
      <span class="text-green-600"><%= user.positive_rating_percentage %>% positive</span>
    <% end %>
  </div>
<% else %>
  <div class="flex items-center text-sm text-gray-500">
    <svg class="w-4 h-4 text-gray-300 mr-1" fill="currentColor" viewBox="0 0 20 20">
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
    </svg>
    No ratings yet
  </div>
<% end %>
