<% content_for :page_title, "Disputes" %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-gray-500">Total Disputes</div>
    <div class="mt-2 text-3xl font-bold text-gray-900"><%= @stats[:total] %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-gray-500">Open</div>
    <div class="mt-2 text-3xl font-bold text-yellow-600"><%= @stats[:open] %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-gray-500">Under Review</div>
    <div class="mt-2 text-3xl font-bold text-blue-600"><%= @stats[:under_review] %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="text-sm font-medium text-gray-500">Resolved</div>
    <div class="mt-2 text-3xl font-bold text-green-600"><%= @stats[:resolved] %></div>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <div class="flex flex-wrap items-center gap-4">
    <%= link_to "All", admin_disputes_path, class: "px-4 py-2 rounded-lg #{params[:status].blank? ? 'bg-rose-600 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
    <%= link_to "Open", admin_disputes_path(status: 'open'), class: "px-4 py-2 rounded-lg #{params[:status] == 'open' ? 'bg-yellow-500 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
    <%= link_to "Under Review", admin_disputes_path(status: 'under_review'), class: "px-4 py-2 rounded-lg #{params[:status] == 'under_review' ? 'bg-blue-500 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
    <%= link_to "Resolved", admin_disputes_path(status: 'resolved'), class: "px-4 py-2 rounded-lg #{params[:status] == 'resolved' ? 'bg-green-500 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
    <%= link_to "Closed", admin_disputes_path(status: 'closed'), class: "px-4 py-2 rounded-lg #{params[:status] == 'closed' ? 'bg-gray-500 text-white' : 'text-gray-600 hover:bg-gray-100'}" %>
  </div>
</div>

<!-- Disputes Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <% if @disputes.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transaction</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Parties</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @disputes.each do |dispute| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              #<%= dispute.id %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= dispute.reason_display %></div>
              <div class="text-xs text-gray-500 truncate max-w-[200px]"><%= truncate(dispute.description, length: 50) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <img src="<%= dispute.card_transaction.gift_card.brand_display_logo %>" alt="" class="w-8 h-6 object-contain rounded bg-gray-50 mr-2">
                <div>
                  <div class="text-sm text-gray-900"><%= dispute.card_transaction.gift_card.brand_name %></div>
                  <div class="text-xs text-gray-500"><%= number_to_currency(dispute.card_transaction.amount) if dispute.card_transaction.sale? %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <div>Buyer: <%= dispute.buyer.display_name %></div>
              <div>Seller: <%= dispute.seller.display_name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case dispute.status %>
              <% when "open" %>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">Open</span>
              <% when "under_review" %>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Under Review</span>
              <% when "resolved" %>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">Resolved</span>
              <% when "closed" %>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Closed</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= dispute.created_at.strftime("%b %d, %Y") %>
              <div class="text-xs"><%= time_ago_in_words(dispute.created_at) %> ago</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", admin_dispute_path(dispute), class: "text-rose-600 hover:text-rose-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="p-12 text-center text-gray-500">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <p>No disputes found.</p>
    </div>
  <% end %>
</div>
