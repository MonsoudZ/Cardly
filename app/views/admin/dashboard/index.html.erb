<% content_for :page_title, "Dashboard" %>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Users -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Total Users</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@total_users) %></p>
      </div>
      <div class="p-3 bg-blue-100 rounded-full">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </div>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      <span class="text-green-600 font-medium">+<%= @new_users_today %></span> today
      &middot;
      <span class="text-green-600 font-medium">+<%= @new_users_this_week %></span> this week
    </p>
  </div>

  <!-- Active Listings -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Active Listings</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@active_listings) %></p>
      </div>
      <div class="p-3 bg-green-100 rounded-full">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      <span class="font-medium"><%= @total_listings %></span> total
      &middot;
      <span class="text-green-600 font-medium">+<%= @listings_today %></span> today
    </p>
  </div>

  <!-- Transactions -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Completed Transactions</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_with_delimiter(@completed_transactions) %></p>
      </div>
      <div class="p-3 bg-purple-100 rounded-full">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
        </svg>
      </div>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      <span class="text-amber-600 font-medium"><%= @pending_transactions %></span> pending
      &middot;
      <span class="text-green-600 font-medium">+<%= @transactions_today %></span> today
    </p>
  </div>

  <!-- Gift Card Value -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500">Total Gift Card Value</p>
        <p class="text-3xl font-bold text-gray-900"><%= number_to_currency(@total_gift_card_value) %></p>
      </div>
      <div class="p-3 bg-rose-100 rounded-full">
        <svg class="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>
    <p class="mt-2 text-sm text-gray-500">
      Across <span class="font-medium"><%= number_with_delimiter(@total_gift_cards) %></span> cards
    </p>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- Transaction Status Chart -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Transaction Status</h3>
    <div class="space-y-3">
      <% Transaction::STATUSES.each do |status| %>
        <% count = @transaction_stats[status] || 0 %>
        <% percentage = @total_transactions > 0 ? (count.to_f / @total_transactions * 100).round(1) : 0 %>
        <div>
          <div class="flex justify-between text-sm mb-1">
            <span class="text-gray-600 capitalize"><%= status %></span>
            <span class="font-medium"><%= count %></span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="h-2 rounded-full <%= case status
                when 'completed' then 'bg-green-500'
                when 'pending' then 'bg-amber-500'
                when 'countered' then 'bg-blue-500'
                when 'rejected' then 'bg-red-500'
                when 'cancelled' then 'bg-gray-400'
                when 'expired' then 'bg-gray-300'
                else 'bg-gray-500'
                end %>" style="width: <%= percentage %>%"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Users -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Recent Users</h3>
      <%= link_to "View all", admin_users_path, class: "text-sm text-rose-600 hover:text-rose-500" %>
    </div>
    <div class="space-y-3">
      <% @recent_users.each do |user| %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <img src="<%= user.avatar.presence || 'https://placehold.co/32?text=' + user.display_name.first.upcase %>" alt="" class="w-8 h-8 rounded-full">
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900"><%= user.display_name %></p>
              <p class="text-xs text-gray-500"><%= user.email %></p>
            </div>
          </div>
          <span class="text-xs text-gray-500"><%= time_ago_in_words(user.created_at) %> ago</span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- Recent Transactions -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Recent Transactions</h3>
      <%= link_to "View all", admin_transactions_path, class: "text-sm text-rose-600 hover:text-rose-500" %>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead>
          <tr class="text-left text-xs text-gray-500 uppercase tracking-wider">
            <th class="pb-2">Transaction</th>
            <th class="pb-2">Status</th>
            <th class="pb-2">Amount</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @recent_transactions.each do |txn| %>
            <tr>
              <td class="py-2">
                <%= link_to admin_transaction_path(txn), class: "hover:text-rose-600" do %>
                  <p class="text-sm font-medium"><%= txn.listing.brand_name %></p>
                  <p class="text-xs text-gray-500"><%= txn.buyer.display_name %> &rarr; <%= txn.seller.display_name %></p>
                <% end %>
              </td>
              <td class="py-2">
                <span class="px-2 py-1 text-xs rounded-full <%= case txn.status
                    when 'completed' then 'bg-green-100 text-green-800'
                    when 'pending' then 'bg-amber-100 text-amber-800'
                    when 'countered' then 'bg-blue-100 text-blue-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                  <%= txn.status.capitalize %>
                </span>
              </td>
              <td class="py-2 text-sm font-medium"><%= number_to_currency(txn.amount) if txn.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent Listings -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">Recent Listings</h3>
      <%= link_to "View all", admin_listings_path, class: "text-sm text-rose-600 hover:text-rose-500" %>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead>
          <tr class="text-left text-xs text-gray-500 uppercase tracking-wider">
            <th class="pb-2">Listing</th>
            <th class="pb-2">Type</th>
            <th class="pb-2">Price</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @recent_listings.each do |listing| %>
            <tr>
              <td class="py-2">
                <%= link_to admin_listing_path(listing), class: "hover:text-rose-600" do %>
                  <p class="text-sm font-medium"><%= listing.brand_name %></p>
                  <p class="text-xs text-gray-500">by <%= listing.user.display_name %></p>
                <% end %>
              </td>
              <td class="py-2">
                <span class="px-2 py-1 text-xs rounded-full <%= listing.sale? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                  <%= listing.listing_type.capitalize %>
                </span>
              </td>
              <td class="py-2 text-sm font-medium"><%= number_to_currency(listing.asking_price) if listing.asking_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
