<% content_for :page_title, "Listings" %>

<div class="mb-6 flex items-center justify-between">
  <h1 class="text-2xl font-bold text-gray-900">Listings</h1>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: admin_listings_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
    <div class="flex-1 min-w-[200px]">
      <label class="block text-sm font-medium text-gray-700 mb-1">Search by Brand</label>
      <%= f.text_field :search, value: params[:search], placeholder: "Brand name...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-transparent" %>
    </div>

    <div class="w-40">
      <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
      <%= f.select :status, options_for_select([["All Statuses", ""], ["Active", "active"], ["Sold", "sold"], ["Cancelled", "cancelled"]], params[:status]), {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-transparent" %>
    </div>

    <div class="w-40">
      <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
      <%= f.select :type, options_for_select([["All Types", ""], ["Sale", "sale"], ["Trade", "trade"]], params[:type]), {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.submit "Filter", class: "px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-900 cursor-pointer" %>
      <% if params[:search].present? || params[:status].present? || params[:type].present? %>
        <%= link_to "Clear", admin_listings_path, class: "ml-2 px-4 py-2 text-gray-600 hover:text-gray-900" %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Listings Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Listing</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Seller</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @listings.each do |listing| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <div class="flex items-center">
              <div>
                <p class="text-sm font-medium text-gray-900"><%= listing.brand_name %></p>
                <p class="text-sm text-gray-500"><%= number_to_currency(listing.gift_card&.balance) %> balance</p>
              </div>
            </div>
          </td>
          <td class="px-6 py-4">
            <%= link_to listing.user.display_name, admin_user_path(listing.user), class: "text-sm text-rose-600 hover:text-rose-800" %>
          </td>
          <td class="px-6 py-4">
            <span class="px-2 py-1 text-xs rounded-full <%= listing.sale? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= listing.listing_type.capitalize %>
            </span>
          </td>
          <td class="px-6 py-4 text-sm text-gray-900">
            <%= listing.asking_price ? number_to_currency(listing.asking_price) : "â€”" %>
          </td>
          <td class="px-6 py-4">
            <span class="px-2 py-1 text-xs rounded-full <%= case listing.status
                when 'active' then 'bg-green-100 text-green-800'
                when 'sold' then 'bg-blue-100 text-blue-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
              <%= listing.status.capitalize %>
            </span>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= listing.created_at.strftime("%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 text-right text-sm">
            <%= link_to "View", admin_listing_path(listing), class: "text-rose-600 hover:text-rose-800" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @listings.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No listings found.</p>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<% if @listings.respond_to?(:total_pages) && @listings.total_pages > 1 %>
  <div class="mt-6 flex justify-center">
    <%= paginate @listings %>
  </div>
<% end %>
