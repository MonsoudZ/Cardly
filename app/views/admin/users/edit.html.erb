<% content_for :page_title, "Edit User: #{@user.display_name}" %>

<div class="mb-6">
  <%= link_to admin_user_path(@user), class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to User
  <% end %>
</div>

<div class="max-w-2xl">
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Edit User</h2>

    <%= form_with model: [:admin, @user], class: "space-y-6" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <label for="user_name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-transparent" %>
      </div>

      <div>
        <label for="user_email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-transparent" %>
      </div>

      <div class="flex items-center justify-end space-x-4 pt-4">
        <%= link_to "Cancel", admin_user_path(@user), class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
        <%= f.submit "Update User", class: "px-6 py-2 bg-rose-600 text-white font-medium rounded-lg hover:bg-rose-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
