<% content_for :page_title, "User: #{@user.display_name}" %>

<div class="mb-6">
  <%= link_to admin_users_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Users
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- User Info -->
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-center">
        <img src="<%= @user.avatar.presence || 'https://placehold.co/96?text=' + @user.display_name.first.upcase %>" alt="" class="w-24 h-24 rounded-full mx-auto">
        <h3 class="mt-4 text-xl font-semibold text-gray-900"><%= @user.display_name %></h3>
        <p class="text-gray-500"><%= @user.email %></p>
        <% if @user.admin? %>
          <span class="inline-block mt-2 px-3 py-1 text-sm font-medium rounded-full bg-purple-100 text-purple-800">Admin</span>
        <% end %>
      </div>

      <div class="mt-6 border-t border-gray-200 pt-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-gray-500">Joined</span>
          <span class="font-medium"><%= @user.created_at.strftime("%B %d, %Y") %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Gift Cards</span>
          <span class="font-medium"><%= @user.gift_cards.count %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Active Listings</span>
          <span class="font-medium"><%= @user.active_listings_count %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Completed Sales</span>
          <span class="font-medium"><%= @user.completed_sales_count %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Completed Purchases</span>
          <span class="font-medium"><%= @user.completed_purchases_count %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Average Rating</span>
          <span class="font-medium">
            <% if @user.average_rating %>
              <%= @user.average_rating %> (<%= @user.rating_count %> reviews)
            <% else %>
              No ratings
            <% end %>
          </span>
        </div>
      </div>

      <div class="mt-6 space-y-3">
        <%= link_to edit_admin_user_path(@user), class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
          Edit User
        <% end %>

        <% unless @user == current_user %>
          <%= button_to toggle_admin_admin_user_path(@user), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50", data: { turbo_confirm: @user.admin? ? "Remove admin access from this user?" : "Grant admin access to this user?" } do %>
            <%= @user.admin? ? "Remove Admin" : "Make Admin" %>
          <% end %>

          <%= button_to admin_user_path(@user), method: :delete, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-lg text-sm font-medium text-red-700 hover:bg-red-50", data: { turbo_confirm: "Are you sure you want to delete this user? This cannot be undone." } do %>
            Delete User
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Activity -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Recent Gift Cards -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Gift Cards</h3>
      <% if @gift_cards.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="text-left text-xs text-gray-500 uppercase tracking-wider">
                <th class="pb-2">Brand</th>
                <th class="pb-2">Balance</th>
                <th class="pb-2">Status</th>
                <th class="pb-2">Added</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @gift_cards.each do |card| %>
                <tr>
                  <td class="py-2 text-sm font-medium"><%= card.brand_name %></td>
                  <td class="py-2 text-sm"><%= number_to_currency(card.balance) %></td>
                  <td class="py-2">
                    <span class="px-2 py-1 text-xs rounded-full <%= card.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= card.status.capitalize %>
                    </span>
                  </td>
                  <td class="py-2 text-sm text-gray-500"><%= time_ago_in_words(card.created_at) %> ago</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No gift cards yet.</p>
      <% end %>
    </div>

    <!-- Recent Listings -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Listings</h3>
      <% if @listings.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="text-left text-xs text-gray-500 uppercase tracking-wider">
                <th class="pb-2">Brand</th>
                <th class="pb-2">Type</th>
                <th class="pb-2">Price</th>
                <th class="pb-2">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @listings.each do |listing| %>
                <tr>
                  <td class="py-2">
                    <%= link_to listing.brand_name, admin_listing_path(listing), class: "text-sm font-medium hover:text-rose-600" %>
                  </td>
                  <td class="py-2">
                    <span class="px-2 py-1 text-xs rounded-full <%= listing.sale? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= listing.listing_type.capitalize %>
                    </span>
                  </td>
                  <td class="py-2 text-sm"><%= number_to_currency(listing.asking_price) if listing.asking_price %></td>
                  <td class="py-2">
                    <span class="px-2 py-1 text-xs rounded-full <%= listing.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= listing.status.capitalize %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No listings yet.</p>
      <% end %>
    </div>

    <!-- Recent Transactions -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Transactions</h3>
      <% if @transactions.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="text-left text-xs text-gray-500 uppercase tracking-wider">
                <th class="pb-2">Transaction</th>
                <th class="pb-2">Role</th>
                <th class="pb-2">Amount</th>
                <th class="pb-2">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @transactions.each do |txn| %>
                <tr>
                  <td class="py-2">
                    <%= link_to admin_transaction_path(txn), class: "hover:text-rose-600" do %>
                      <p class="text-sm font-medium"><%= txn.listing.brand_name %></p>
                      <p class="text-xs text-gray-500"><%= time_ago_in_words(txn.created_at) %> ago</p>
                    <% end %>
                  </td>
                  <td class="py-2 text-sm">
                    <% if txn.buyer == @user %>
                      <span class="text-blue-600">Buyer</span>
                    <% else %>
                      <span class="text-green-600">Seller</span>
                    <% end %>
                  </td>
                  <td class="py-2 text-sm font-medium"><%= number_to_currency(txn.amount) if txn.amount %></td>
                  <td class="py-2">
                    <span class="px-2 py-1 text-xs rounded-full <%= case txn.status
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'pending' then 'bg-amber-100 text-amber-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                      <%= txn.status.capitalize %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No transactions yet.</p>
      <% end %>
    </div>
  </div>
</div>
