<% content_for :page_title, "Transaction ##{@transaction.id}" %>

<div class="mb-6">
  <%= link_to admin_transactions_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Transactions
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Transaction Info -->
  <div class="lg:col-span-1 space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-center">
        <span class="px-4 py-2 text-lg rounded-full <%= case @transaction.status
            when 'completed' then 'bg-green-100 text-green-800'
            when 'pending' then 'bg-amber-100 text-amber-800'
            when 'cancelled' then 'bg-gray-100 text-gray-800'
            else 'bg-gray-100 text-gray-800'
            end %>">
          <%= @transaction.status.capitalize %>
        </span>
        <h3 class="mt-4 text-xl font-semibold text-gray-900">Transaction #<%= @transaction.id %></h3>
        <p class="text-gray-500"><%= @transaction.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div class="mt-6 border-t border-gray-200 pt-6 space-y-4">
        <div class="flex justify-between">
          <span class="text-gray-500">Amount</span>
          <span class="font-medium text-lg"><%= @transaction.amount ? number_to_currency(@transaction.amount) : "â€”" %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Type</span>
          <span class="font-medium"><%= @transaction.transaction_type&.capitalize || "Sale" %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-500">Listing</span>
          <%= link_to @transaction.listing.brand_name, admin_listing_path(@transaction.listing), class: "font-medium text-rose-600 hover:text-rose-800" %>
        </div>
      </div>
    </div>

    <!-- Parties -->
    <div class="bg-white rounded-lg shadow p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Parties</h4>

      <div class="space-y-4">
        <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
          <div>
            <p class="text-xs text-blue-600 font-medium">BUYER</p>
            <%= link_to @transaction.buyer.display_name, admin_user_path(@transaction.buyer), class: "font-medium text-gray-900 hover:text-rose-600" %>
          </div>
        </div>

        <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
          <div>
            <p class="text-xs text-green-600 font-medium">SELLER</p>
            <%= link_to @transaction.seller.display_name, admin_user_path(@transaction.seller), class: "font-medium text-gray-900 hover:text-rose-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Details -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Timeline -->
    <div class="bg-white rounded-lg shadow p-6">
      <h4 class="text-lg font-semibold text-gray-900 mb-4">Timeline</h4>

      <div class="space-y-4">
        <div class="flex items-start">
          <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-900">Transaction created</p>
            <p class="text-xs text-gray-500"><%= @transaction.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>

        <% if @transaction.completed_at.present? %>
          <div class="flex items-start">
            <div class="w-8 h-8 rounded-full bg-green-200 flex items-center justify-center mr-3">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900">Transaction completed</p>
              <p class="text-xs text-gray-500"><%= @transaction.completed_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
        <% end %>

        <% if @transaction.cancelled_at.present? %>
          <div class="flex items-start">
            <div class="w-8 h-8 rounded-full bg-red-200 flex items-center justify-center mr-3">
              <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900">Transaction cancelled</p>
              <p class="text-xs text-gray-500"><%= @transaction.cancelled_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Messages -->
    <% if @messages.any? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Messages (<%= @messages.count %>)</h4>

        <div class="space-y-4 max-h-96 overflow-y-auto">
          <% @messages.each do |message| %>
            <div class="p-3 rounded-lg <%= message.sender == @transaction.buyer ? 'bg-blue-50' : 'bg-green-50' %>">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-900"><%= message.sender.display_name %></span>
                <span class="text-xs text-gray-500"><%= time_ago_in_words(message.created_at) %> ago</span>
              </div>
              <p class="text-sm text-gray-700"><%= message.body %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Ratings -->
    <% if @ratings.any? %>
      <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">Ratings</h4>

        <div class="space-y-4">
          <% @ratings.each do |rating| %>
            <div class="p-4 border border-gray-200 rounded-lg">
              <div class="flex items-center justify-between mb-2">
                <div>
                  <span class="text-sm font-medium text-gray-900"><%= rating.rater.display_name %></span>
                  <span class="text-gray-400 mx-2">rated</span>
                  <span class="text-sm font-medium text-gray-900"><%= rating.ratee.display_name %></span>
                </div>
                <div class="flex items-center">
                  <% rating.score.times do %>
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                  <% (5 - rating.score).times do %>
                    <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                </div>
              </div>
              <% if rating.comment.present? %>
                <p class="text-sm text-gray-600"><%= rating.comment %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
