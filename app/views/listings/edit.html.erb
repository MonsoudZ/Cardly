<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Listing</h1>
    <p class="mt-2 text-gray-600">Update your <%= @listing.brand_name %> gift card listing.</p>
  </div>

  <%= form_with model: @listing, class: "space-y-6" do |f| %>
    <% if @listing.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @listing.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Card Preview -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Gift Card</h3>
      <div class="flex items-center space-x-4">
        <img src="<%= @listing.brand_display_logo %>" alt="<%= @listing.brand_name %>" class="w-16 h-10 object-contain rounded bg-gray-50">
        <div>
          <p class="font-medium text-gray-900"><%= @listing.brand_name %></p>
          <p class="text-sm text-gray-500">Balance: <%= number_to_currency(@listing.balance) %></p>
        </div>
      </div>
    </div>

    <!-- Listing Type -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Listing Type</h3>

      <div class="grid grid-cols-2 gap-4">
        <label class="relative flex cursor-pointer rounded-lg border bg-white p-4 shadow-sm focus:outline-none <%= @listing.sale? ? 'border-rose-500 ring-2 ring-rose-500' : 'border-gray-300' %>">
          <%= f.radio_button :listing_type, "sale", class: "sr-only" %>
          <span class="flex flex-1">
            <span class="flex flex-col">
              <span class="block text-sm font-medium text-gray-900">For Sale</span>
              <span class="mt-1 flex items-center text-sm text-gray-500">Sell for cash</span>
            </span>
          </span>
          <svg class="h-5 w-5 text-rose-600 <%= @listing.sale? ? '' : 'invisible' %>" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </label>

        <label class="relative flex cursor-pointer rounded-lg border bg-white p-4 shadow-sm focus:outline-none <%= @listing.trade? ? 'border-blue-500 ring-2 ring-blue-500' : 'border-gray-300' %>">
          <%= f.radio_button :listing_type, "trade", class: "sr-only" %>
          <span class="flex flex-1">
            <span class="flex flex-col">
              <span class="block text-sm font-medium text-gray-900">For Trade</span>
              <span class="mt-1 flex items-center text-sm text-gray-500">Trade for other cards</span>
            </span>
          </span>
          <svg class="h-5 w-5 text-blue-600 <%= @listing.trade? ? '' : 'invisible' %>" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </label>
      </div>
    </div>

    <!-- Sale Details -->
    <div class="bg-white shadow rounded-lg p-6" id="sale-details">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Sale Details</h3>

      <div>
        <%= f.label :asking_price, "Asking Price", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1 relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">$</span>
          </div>
          <%= f.number_field :asking_price, step: 0.01, min: 0.01, class: "block w-full pl-7 rounded-md border-gray-300 focus:border-rose-500 focus:ring-rose-500" %>
        </div>
        <p class="mt-1 text-sm text-gray-500">Suggested: <%= number_to_currency(@listing.balance * 0.9) %> (10% discount)</p>
      </div>
    </div>

    <!-- Trade Details -->
    <div class="bg-white shadow rounded-lg p-6" id="trade-details">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Trade Preferences</h3>

      <div>
        <%= f.label :trade_preferences, "What are you looking for?", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :trade_preferences, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., Amazon, Target, or restaurant gift cards of similar value..." %>
      </div>
    </div>

    <!-- Description -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Additional Details</h3>

      <div>
        <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500", placeholder: "Any additional information about this card..." %>
      </div>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", listing_path(@listing), class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      <%= f.submit "Update Listing", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-rose-600 hover:bg-rose-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
