<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to marketplace_path, class: "inline-flex items-center text-gray-600 hover:text-rose-600" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Marketplace
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <!-- Listing Card -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6">
          <div class="flex items-start justify-between">
            <div class="flex items-center space-x-4">
              <img src="<%= @listing.brand_display_logo %>" alt="<%= @listing.brand_name %>" class="w-20 h-12 object-contain rounded-lg bg-gray-50 p-2">
              <div>
                <h1 class="text-2xl font-bold text-gray-900"><%= @listing.brand_name %> Gift Card</h1>
                <p class="text-gray-500">Listed by <%= @listing.user.display_name %></p>
              </div>
            </div>
            <% if @listing.sale? %>
              <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">For Sale</span>
            <% else %>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">For Trade</span>
            <% end %>
          </div>

          <div class="mt-6 grid grid-cols-2 gap-6">
            <div class="bg-gray-50 rounded-lg p-4">
              <p class="text-sm text-gray-500">Card Value</p>
              <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@listing.balance) %></p>
            </div>
            <% if @listing.sale? %>
              <div class="bg-rose-50 rounded-lg p-4">
                <p class="text-sm text-rose-600">Asking Price</p>
                <p class="text-2xl font-bold text-rose-600"><%= number_to_currency(@listing.asking_price) %></p>
                <% if @listing.discount_percentage.present? && @listing.discount_percentage > 0 %>
                  <p class="text-sm text-green-600 mt-1">Save <%= @listing.discount_percentage %>% (<%= number_to_currency(@listing.savings) %>)</p>
                <% end %>
              </div>
            <% end %>
          </div>

          <% if @listing.trade? && @listing.trade_preferences.present? %>
            <div class="mt-6">
              <h3 class="text-sm font-medium text-gray-900">Looking to trade for:</h3>
              <p class="mt-2 text-gray-600 bg-blue-50 p-4 rounded-lg"><%= @listing.trade_preferences %></p>
            </div>
          <% end %>

          <% if @listing.description.present? %>
            <div class="mt-6">
              <h3 class="text-sm font-medium text-gray-900">Description</h3>
              <p class="mt-2 text-gray-600"><%= @listing.description %></p>
            </div>
          <% end %>

          <div class="mt-6 pt-6 border-t border-gray-100 text-sm text-gray-500">
            Listed <%= time_ago_in_words(@listing.created_at) %> ago
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Actions -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Interested?</h2>

        <% if user_signed_in? && @listing.user_id == current_user.id %>
          <div class="space-y-3">
            <%= link_to edit_listing_path(@listing), class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit Listing
            <% end %>
            <%= button_to cancel_listing_path(@listing), method: :post, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-lg text-sm font-medium text-red-700 bg-white hover:bg-red-50", data: { turbo_confirm: "Are you sure you want to cancel this listing?" } do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Cancel Listing
            <% end %>
          </div>
        <% else %>
          <% if @listing.sale? %>
            <button type="button" class="w-full inline-flex items-center justify-center px-4 py-3 bg-rose-600 text-white rounded-lg hover:bg-rose-500 font-medium">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              Buy for <%= number_to_currency(@listing.asking_price) %>
            </button>
          <% else %>
            <button type="button" class="w-full inline-flex items-center justify-center px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-500 font-medium">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
              </svg>
              Propose Trade
            </button>
          <% end %>
          <p class="mt-3 text-xs text-center text-gray-500">
            Coming soon: Secure checkout and trade system
          </p>
        <% end %>
      </div>

      <!-- Seller Info -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Seller</h2>

        <div class="flex items-center">
          <img src="<%= @listing.user.avatar.presence || 'https://placehold.co/40?text=' + @listing.user.display_name.first.upcase %>" alt="" class="w-10 h-10 rounded-full bg-gray-100">
          <div class="ml-3">
            <p class="font-medium text-gray-900"><%= @listing.user.display_name %></p>
            <p class="text-sm text-gray-500">Member since <%= @listing.user.created_at.strftime("%B %Y") %></p>
          </div>
        </div>
      </div>

      <!-- Brand Info -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Brand</h2>

        <%= link_to brand_path(@listing.brand), class: "flex items-center hover:bg-gray-50 -mx-2 px-2 py-2 rounded-lg" do %>
          <img src="<%= @listing.brand_display_logo %>" alt="<%= @listing.brand_name %>" class="w-12 h-8 object-contain">
          <div class="ml-3">
            <p class="font-medium text-gray-900"><%= @listing.brand_name %></p>
            <p class="text-sm text-gray-500">View more <%= @listing.brand_name %> cards</p>
          </div>
          <svg class="w-5 h-5 ml-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
