<!DOCTYPE html>
<html class="h-full bg-gray-100">
<head>
  <title>Admin - Cardly</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="turbo-cache-control" content="no-cache">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", type: "module", "data-turbo-track": "reload" %>
</head>

<body class="h-full">
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <div class="w-64 bg-gray-900 text-white flex flex-col">
      <div class="p-4 border-b border-gray-800">
        <h1 class="text-xl font-bold text-rose-500">Cardly Admin</h1>
      </div>

      <nav class="flex-1 py-4">
        <%= link_to admin_root_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{controller_name == 'dashboard' ? 'bg-gray-800 text-white' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Dashboard
        <% end %>

        <%= link_to admin_users_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{controller_name == 'users' ? 'bg-gray-800 text-white' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          Users
        <% end %>

        <%= link_to admin_listings_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{controller_name == 'listings' ? 'bg-gray-800 text-white' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          Listings
        <% end %>

        <%= link_to admin_transactions_path, class: "flex items-center px-4 py-3 text-gray-300 hover:bg-gray-800 hover:text-white #{controller_name == 'transactions' ? 'bg-gray-800 text-white' : ''}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          Transactions
        <% end %>
      </nav>

      <div class="p-4 border-t border-gray-800">
        <%= link_to root_path, class: "flex items-center text-gray-400 hover:text-white text-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Cardly
        <% end %>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
      <!-- Top Bar -->
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="flex items-center justify-between px-6 py-4">
          <h2 class="text-lg font-semibold text-gray-900"><%= yield :page_title %></h2>
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-600"><%= current_user.email %></span>
            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm text-rose-600 hover:text-rose-500" %>
          </div>
        </div>
      </header>

      <!-- Flash Messages -->
      <% if notice %>
        <div class="mx-6 mt-4 p-4 bg-green-50 border border-green-200 text-green-700 rounded-lg">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="mx-6 mt-4 p-4 bg-red-50 border border-red-200 text-red-700 rounded-lg">
          <%= alert %>
        </div>
      <% end %>

      <!-- Page Content -->
      <main class="flex-1 p-6 overflow-y-auto">
        <%= yield %>
      </main>
    </div>
  </div>
</body>
</html>
