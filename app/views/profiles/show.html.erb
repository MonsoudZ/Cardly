<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex sm:items-center">
          <div class="sm:flex-shrink-0">
            <img class="h-24 w-24 rounded-full object-cover" src="<%= @user.avatar.presence || 'https://placehold.co/96?text=' + (@user.name.presence&.first || @user.email.first).upcase %>" alt="Profile picture" />
          </div>
          <div class="mt-4 sm:ml-4 sm:mt-0">
            <h1 class="text-xl font-semibold text-gray-900"><%= @user.name.presence || @user.email %></h1>
            <p class="mt-1 text-sm text-gray-600">Member since <%= @user.created_at.strftime("%B %Y") %></p>
          </div>
        </div>
        <div class="mt-5 sm:ml-4 sm:mt-0">
          <%= link_to "Edit Profile", edit_profile_path, class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600" %>
        </div>
      </div>

      <div class="mt-6 border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
          <% if @user.name.present? %>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Name</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.name %></dd>
          </div>
          <% end %>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Email</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.email %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Collection Value</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= number_to_currency(@user.total_collection_value) %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Total Cards</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.total_cards_count %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Collections</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.collections.count %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Cards for Trade</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.items_for_trade.count %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Cards for Sale</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.items_for_sale.count %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Seller Payout Settings -->
  <div class="mt-6 overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Seller Payout Settings</h2>

      <% if @user.stripe_connect_onboarded? %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="font-medium text-green-800">Seller Account Connected</span>
          </div>
          <p class="text-sm text-green-700 mt-2">
            Your Stripe account is set up and ready to receive payouts.
            <% if @user.stripe_connect_payouts_enabled? %>
              Payouts are enabled.
            <% else %>
              Payouts are pending verification.
            <% end %>
          </p>
          <%= link_to "Manage Payout Settings", stripe_connect_onboard_path, class: "mt-3 inline-flex items-center text-sm text-green-700 hover:text-green-900 font-medium" %>
        </div>
      <% else %>
        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-amber-600 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div>
              <p class="font-medium text-amber-800">Set Up Seller Account</p>
              <p class="text-sm text-amber-700 mt-1">
                To receive payouts when you sell gift cards, connect your bank account through Stripe.
                This only takes a few minutes.
              </p>
              <%= link_to stripe_connect_onboard_path, class: "mt-3 inline-flex items-center px-4 py-2 bg-amber-600 text-white rounded-lg hover:bg-amber-500 font-medium text-sm" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
                Set Up Stripe Connect
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 