<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <% if flash[:notice] %>
    <div class="mb-4 rounded-md bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= flash[:notice] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="sm:flex sm:items-center">
          <div class="sm:flex-shrink-0">
            <div class="flex h-24 w-24 items-center justify-center rounded-full bg-rose-100 text-rose-600 text-3xl font-semibold">
              <%= @user.name.present? ? @user.name[0].upcase : @user.email[0].upcase %>
            </div>
          </div>
          <div class="mt-4 sm:ml-4 sm:mt-0">
            <h1 class="text-xl font-semibold text-gray-900"><%= @user.name.presence || @user.email %></h1>
            <p class="mt-1 text-sm text-gray-600">Member since <%= @user.created_at.strftime("%B %Y") %></p>
          </div>
        </div>
        <div class="mt-5 sm:ml-4 sm:mt-0">
          <%= link_to "Edit Profile", edit_profile_path, class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600" %>
        </div>
      </div>

      <% if @user.bio.present? %>
        <div class="mt-6">
          <p class="text-sm text-gray-700"><%= @user.bio %></p>
        </div>
      <% end %>

      <div class="mt-6 border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Display Name</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.name.presence || "Not set" %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Email</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @user.email %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Wallet Balance</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">$0.00</dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Cards Listed</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">0</dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Successful Trades</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">0</dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div> 