<div class="page-container max-w-2xl">
  <div class="mb-6">
    <%= link_to profile_path, class: "inline-flex items-center text-neutral-600 hover:text-primary-600 transition-colors" do %>
      <%= render 'shared/components/icon', name: 'chevron-left', size: :sm %>
      <span class="ml-1">Back to Profile</span>
    <% end %>
  </div>

  <div class="card">
    <div class="px-6 py-4 border-b border-neutral-100">
      <h1 class="text-xl font-bold text-neutral-900">Edit Profile</h1>
      <p class="text-sm text-neutral-500 mt-1">Update your personal information</p>
    </div>

    <div class="p-6">
      <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="alert-danger">
            <div class="flex">
              <%= render 'shared/components/icon', name: 'x', size: :md, color: 'text-danger-400' %>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-danger-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
                </h3>
                <ul class="mt-2 text-sm text-danger-700 list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, "Display Name", class: "form-label" %>
          <%= form.text_field :name, class: "form-input", placeholder: "Your display name" %>
          <p class="form-hint">This is how other users will see you</p>
        </div>

        <div>
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-input" %>
        </div>

        <div>
          <%= form.label :avatar, "Avatar URL", class: "form-label" %>
          <%= form.text_field :avatar, class: "form-input", placeholder: "https://example.com/avatar.jpg" %>
          <p class="form-hint">Enter a URL to an image for your profile picture</p>
        </div>

        <div class="flex items-center justify-end gap-x-4 pt-4 border-t border-neutral-100">
          <%= link_to "Cancel", profile_path, class: "btn-ghost btn-md" %>
          <%= form.submit "Save Changes", class: "btn-primary btn-md cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
