<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-xl font-semibold text-gray-900 mb-6">Edit Profile</h1>

      <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "Your display name" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.email_field :email, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3" %>
        </div>

        <div>
          <%= form.label :avatar, "Avatar URL", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :avatar, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-rose-600 sm:text-sm sm:leading-6 px-3", placeholder: "https://example.com/avatar.jpg" %>
          <p class="mt-1 text-sm text-gray-500">Enter a URL to an image for your profile picture.</p>
        </div>

        <div class="flex items-center justify-end gap-x-6">
          <%= link_to "Cancel", profile_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
          <%= form.submit "Save", class: "rounded-md bg-rose-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
